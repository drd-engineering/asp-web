    <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap', 'ngSanitize', 'ngFileUpload', 'ngOnlyNumberApp'])
        myApp.directive('compileTemplate', function ($compile, $parse) {
            return {
                link: function (scope, element, attr) {
                    var parsed = $parse(attr.ngBindHtml);
                    function getStringValue() { return (parsed(scope) || '').toString(); }

                    //Recompile if the template changes
                    scope.$watch(getStringValue, function () {
                        $compile(element, null, -9999)(scope);  //The -9999 makes it skip directives so that we do not recompile ourselves
                    });
                }
            }
        })
        myApp.directive('onFinishRender', function ($timeout) {
            return {
                restrict: 'A',
                link: function (scope, element, attr) {
                    if (scope.$last === true) {
                        $timeout(function () {
                            scope.$emit('ngRepeatBindRoutesFinished');
                        });
                    }
                }
            }
        });
        myApp.controller("drdController", function ($scope, $sce, Upload, $location, $http, $filter) {

            $scope.MAX_IMAGE = 3;

            $scope.model = {};
            $scope.wizarno = 'product';
            $scope.model.Id = 0;
            $scope.master={};
            $scope.model.IsActive=true;
            $scope.infoSuccess="Data berhasil disimpan.";
            $scope.thumbnail="/Images/news/no_picture_video.png";
            initValues();

            $scope.$on('ngRepeatBindRoutesFinished', function (ngRepeatFinishedEvent) {
                $(".control-primary").uniform({
                    radioClass: 'choice',
                    wrapperClass: 'border-primary-600 text-primary-800'
                });
            });

            $(".control-warning").uniform({
                radioClass: 'choice',
                wrapperClass: 'border-warning-600 text-warning-800'
            });
            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            angular.element(document).ready(function () {
                //if ($scope.model.Id==0 )
                //    $scope.getMaster();

                $(".content-wrapper").show();
            });

            function initValues() {

                var product = @Html.Raw(Json.Encode(Model.obj));
                if (product.Id!=0 ){
                    $scope.model.Id=product.Id;
                    $scope.model.Code=product.Code;
                    $scope.model.Title=product.Title;
                    $scope.model.Descr=product.Descr;
                    $scope.model.ChannelId=product.ChannelId;
                    $scope.model.ChannelTitle=product.ChannelTitle;
                    $scope.model.CategoryId=product.CategoryId;
                    $scope.model.DatePublished=convertJsonDate(product.DatePublished);
                    $scope.model.AppZone=product.AppZone;
                    $scope.model.IsAppZonePublish=product.IsAppZonePublish;
                    $scope.model.IsActive=product.IsActive;
                    $scope.model.UserId=product.UserId;

                    $('#checkboxpublish')[0].checked= $scope.model.IsAppZonePublish;

                    $scope.thumbnail="https://i.ytimg.com/vi/"+product.Code+"/default.jpg";

                }

                $('#checkbox1').bootstrapSwitch.defaults.size='mini';

            }

            $scope.initData = function () {
            }

            $scope.typeChange = function (ini, idx) {
                alert(idx);
            }



            /*--------------------------------------------------------------
            SAVE PRODUCT
            --------------------------------------------------------------*/
            $scope.saveProduct = function () {
                var btn = Ladda.create(document.querySelector('.btn-submit'));
                btn.start();
                $http.post('@Url.Action("Save", "newsvideo")',
                    {
                        news: {
                            Id: $scope.model.Id,
                            Code: $scope.model.Code,
                            Title: $scope.model.Title,
                            Descr: $scope.model.Descr,
                            ChannelId: $scope.model.ChannelId,
                            ChannelTitle: $scope.model.ChannelTitle,
                            CategoryId: $scope.model.CategoryId,
                            DatePublished: $scope.model.DatePublished,
                            IsAppZonePublish: $('#checkboxpublish')[0].checked,
                            IsActive: $('#checkbox1')[0].checked,
                            UserId: 'SYST'
                        }
                    }).then(function (response) {
                        btn.stop();
                        if (response.data) {
                            $scope.wizarno = 'success';
                        }
                    }, function (response) {
                        btn.stop();
                        //error handle\
                        var x = 0;
                    });
            }

           
            /*--------------------------------------------------------------
            UPDATE PRODUCT
            --------------------------------------------------------------*/
            $scope.updateProduct = function () {
                //if (!$scope.isValidForm($scope.myForm))
                //    return;

                if ($scope.model.Title==undefined) {
                    showInfo("Required title");
                    return;
                }

                $scope.saveProduct();
            }

            $scope.isValidForm = function (theForm) {
                var isvalid = theForm.$valid;
                return isvalid;
            };

            $scope.updateContent = function () {
                var btn = Ladda.create(document.querySelector('.btn-process'));
                btn.start();
                $http.post('@Url.Action("GetContent", "UrlRequest")', {code:$scope.model.Code}).then(function (response) {
                    btn.stop();
                    if (response.data) {
                        var result=response.data;
                        if (result.items.length==0){
                            showInfo("Invalid youtube code id.");
                            return;
                        }
                        $scope.model.Title=result.items[0].snippet.title;
                        $scope.model.Descr=result.items[0].snippet.description;
                        $scope.model.ChannelId=result.items[0].snippet.channelId;
                        $scope.model.ChannelTitle=result.items[0].snippet.channelTitle;
                        $scope.model.CategoryId=result.items[0].snippet.categoryId;
                        $scope.model.DatePublished=result.items[0].snippet.publishedAt;
                        $scope.thumbnail=result.items[0].snippet.thumbnails.default.url;
                    }
                }, function (response) {
                    btn.stop();
                    //error handle\
                    var x = 0;
                });
            };

            /*--------------------------------------------------------------
            GENERALD
            --------------------------------------------------------------*/
            $scope.scrollingPage = function (id) {
                $('html, body').animate({
                    scrollTop: $(id).offset().top
                }, 200);
            }
            /*--------------------------------------------------------------
            CONVERT JSON DATE
            --------------------------------------------------------------*/
            function convertJsonDate(val) {
                if (val == undefined)
                    return '';
                return new Date(parseInt(val.substr(6)));
            }

        });


        $(function () {
        });


        $(document).ready(function () {
            $('#checkbox1').bootstrapSwitch();
        })

    </script>

