
@{
    Layout = null;
}

<div id="modal_select_contact" class="modal fade" z-index="10000">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h6 class="modal-title">Select Contact</h6>
            </div>

            <div class="input-group">
                <span class="input-group-addon"><i class="icon-search4"></i></span>
                <input type="text" ng-keyup="$event.keyCode == 13 && getLiteMembers(kriteria, page, row)" class="form-control" ng-model="kriteria" placeholder="Enter nomor/name/email/phone" />

                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" ng-click="getLiteMembers(kriteria, page, row)">Search</button>
                </span>

                <span class="input-group-btn" style="width:75px">
                    <select ng-model="page" class="form-control" ng-change="changePageMember(kriteria, page, row)">
                        <option value="{{x.value}}" ng-repeat="x in paging">{{x.text}}</option>
                    </select>
                </span>
            </div>

            <div style="height:450px" class="table-responsive">
                <table class="table-xxs table-bordered table-hover datatable-highlight dataTable no-footer" style="font-size:small;width:100%">
                    <thead>
                        <tr>
                            <th width="25px">#</th>
                            <th>Nomor</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Profession</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="x in members" style="vertical-align:top;background-color:{{(x.Profession!=null?'#e1bee7':'white')}}">
                            <td width="25px">{{$index+1 + index}}</td>
                            <td><a data-dismiss="modal" ng-click="setMember($index);">{{x.Number}}</a></td>
                            <td>{{x.Name}}</td>
                            <td>{{x.Phone}}</td>
                            <td>{{x.Profession}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

