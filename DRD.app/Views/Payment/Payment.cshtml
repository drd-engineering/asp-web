                        }
                    }).then(function (response) {
                        if (response.data) {
                            window.scrollTo(0, 0);
                            $scope.xresult = response.data;
                            $scope.wizarno = 'success';

                        }
                    }, function (response) {
                        //error handle\
                        var x = 0;
                    });
            }*@

            $scope.checkCompanyBank = function(pm, cb){
                $scope.pmSelected=pm;
                $scope.cbSelected=cb;
            }

            $scope.continuePayment = function () {
                if (!$scope.isValidForm($scope.myForm))
                    return;

                //var checked=document.querySelector('input[name="companyBank"]:checked');

                if ($scope.pmSelected==null) {
                    showInfo("Choose one of the payment methods.");
                    return;
                }

                //$scope.checkedValue=checked.value;
                var met=$scope.pmSelected;//$filter('filter')($scope.xresult.PaymentMethods,$scope.compare)[0];
                if (met.ConfirmType == 0){
                    if (met.Code=='VA')
                        location.href = '/payment/Aggregator?id=' + $scope.xresult.KeyId+','+$scope.cbSelected.KeyId;
                    else{
                        window.open('/payment/Aggregator2?id=' + $scope.xresult.KeyId+','+$scope.cbSelected.KeyId);
                        $scope.wizarno='success';
                    }
                }else if ((met.ConfirmType & 1)==1){
                    location.href = '/payment/Confirmation?id=' + $scope.xresult.KeyId+','+$scope.cbSelected.KeyId;
                }else if ((met.ConfirmType & 2)==2){
                    location.href = '/payment/Gerai?id=' + $scope.xresult.KeyId+','+$scope.cbSelected.KeyId;
                }else if ((met.ConfirmType & 4)==4){
                    location.href = '/payment/Deposit?id=' + $scope.xresult.KeyId+','+$scope.cbSelected.KeyId;
                }else if ((met.ConfirmType & 8)==8){
                    location.href = '/payment/Voucher?id=' + $scope.xresult.KeyId+','+$scope.cbSelected.KeyId;
                }
                var x=1;
            }
            
            $scope.compare = function(obj){
                return (obj.Id==$scope.checkedValue);
            }


            $scope.isValidForm = function (theForm) {
                var isvalid = theForm.$valid;
                return isvalid;
            };

            $scope.scrollingPage = function (id) {
                $('html, body').animate({
                    scrollTop: $(id).offset().top
                }, 200);
            }

            /*--------------------------------------------------------------
            CONVERT JSON DATE
            --------------------------------------------------------------*/
            $scope.convertJsonDate = function (val) {
                if (val == undefined)
                    return '';
                return new Date(parseInt(val.substr(6)));
            }

        });



        $(document).ready(function () {
            $(".styled, .multiselect-container input").uniform({
                radioClass: 'choice'
            });
        })



    </script>
