                        </div>

                    </div>

                </div>
                <!-- /page header -->
                <!-- Horizontal form options -->
                <!-- Content area -->
                <div class="content" style="display:none">


                    <!-- Basic layout-->


                    <div class="panel panel-flat">
                        <div class="panel-body">


                            <!--MEMBER DATA-->

                            <form name="myForm" class="form-horizontal" autocomplete="off">

                                <div ng-show="wizarno=='product'">
                                    <fieldset>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-md-10">
                                                    Number: <b>{{xresult.TopupNo}}</b><br />
                                                    Date: <b>{{convertJsonDate(xresult.TopupDate) | date: 'dd/MM/yyyy'}}</b><br />
                                                    Amount: <span style="color:red;font-size:large"><b>{{xresult.Amount|number}}</b></span><br />
                                                    <hr />
