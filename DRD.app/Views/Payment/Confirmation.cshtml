    <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap', 'ngFileUpload', 'ngOnlyNumberApp'])

        myApp.controller("drdController", function ($scope, Upload, $location, $http, $filter) {
            // modal project
            $scope.mybank={Id:0, Bank:{Name:'N/A'},AccountNo:'N/A',AccountName:'N/A',};
            $scope.mybanks = [];
            $scope.bankCount = [];
            $scope.paging = [];
            $scope.kriteria = "";
            $scope.page = 1;
            $scope.row = 20;
            $scope.currPage = 0;
            $scope.index = 0;
            // modal project

            $scope.model = {};
            $scope.wizarno = 'product';
            $scope.xresult = {};
            $scope.key="";
            
            initValues();

            $(".control-warning").uniform({
                radioClass: 'choice',
                wrapperClass: 'border-warning-600 text-warning-800'
            });

            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            angular.element(document).ready(function () {
                $(".content").show();
            });

            function initValues() {
                var product = @Html.Raw(Json.Encode(Model.obj));
                $scope.key= @Html.Raw(Json.Encode(Model.key));
                $scope.xresult=product;
                $scope.pm=product.PaymentMethods[0];
                $scope.cb=$scope.pm.CompanyBanks[0];
            }

            $scope.initData = function () {

            }


            /*--------------------------------------------------------------
            SAVE PRODUCT
            --------------------------------------------------------------*/
            $scope.submitPayment = function () {
                if ($scope.mybank.Id==0){
                    showInfo("select your bank account for payment.");
                    return;
                }
                var btn = Ladda.create(document.querySelector('.btn-submit'));
                btn.start();
                 $http.post('@Url.Action("Save", "membertopuppayment")',
                    {
                        topup: {
                            KeyId:$scope.key,
                            MemberAccountId:$scope.mybank.Id,
                        }
                    }).then(function (response) {
                        btn.stop();
                        if (response.data) {
                            window.scrollTo(0, 0);
                            $scope.wizarno = 'success';

                        }
                    }, function (response) {
                        //error handle\
                        btn.stop();
                        var x = 0;
                    });
            }

            /*--------------------------------------------------------------
                POPUP ACCOUNT
            --------------------------------------------------------------*/
            $scope.popupBank = function () {
                $("#modal_select_membank").modal("show");
                $scope.mybanks=[];

            }
            $scope.setBank = function (idx) {
                $scope.mybank = $scope.mybanks[idx];
                $("#modal_select_membank").modal("hide");
            }

            $scope.getLiteBanks = function (kriteria, page, row) {
                $scope.mybanks = [];
                $http.post('@Url.Action("GetLiteAll", "memberaccount")', { topCriteria: kriteria, page: page, pageSize: row}).then(function (response) {
                    if (response.data) {
                        $scope.mybanks = response.data;

                        $scope.index = row * (page - 1);

                        $scope.paging = [];
                        $scope.getBankCount(kriteria);

                        $scope.isView = true;
                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            $scope.changePageBanks = function (kriteria, page, row) {
                $scope.mybanks = [];
                $http.post('@Url.Action("GetLiteAll", "memberaccount")', { topCriteria: kriteria, page: page, pageSize: row }).then(function (response) {
                    if (response.data) {
                        $scope.mybanks = response.data;
                        $scope.index = row * (page - 1);
                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            $scope.getBankCount = function (kriteria) {
                $http.post('@Url.Action("GetLiteAllCount", "memberaccount")', { topCriteria: kriteria}).then(function (response) {
                    if (response.data) {

                        var jumlahData = response.data;
                        var jumlahPage = Math.ceil(jumlahData / $scope.row);
                        for (var i = 1; i <= jumlahPage; i++) {
                            $scope.paging.push({ value: i, text: i });
                        }

                        $scope.page = "1";

                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            /*--------------------------------------------------------------
                END POPUP COMPANY
            --------------------------------------------------------------*/


            $scope.scrollingPage = function (id) {
                $('html, body').animate({
                    scrollTop: $(id).offset().top
                }, 200);
            }

            /*--------------------------------------------------------------
            CONVERT JSON DATE
            --------------------------------------------------------------*/
            $scope.convertJsonDate = function (val) {
                if (val == undefined)
                    return '';
                return new Date(parseInt(val.substr(6)));
            }

        });



        $(document).ready(function () {
        })



    </script>
</body>