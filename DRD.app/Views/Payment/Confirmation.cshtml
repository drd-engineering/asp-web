                                                    Bank : {{cb.Bank.Name}}<br />
                                                    Account No: <span style="color:orange;font-size:large">
                                                        <b>{{cb.AccountNo}}</b>
                                                    </span><br />
                                                    Account Name: {{cb.AccountName}}<br />
                                                </div>


                                            </div>
                                            <hr />
                                            <div>
                                                <b><u><a ng-click="popupBank()">My Bank Account</a></u></b><br />
                                                Bank: {{mybank.Bank.Name}} <br />
                                                Account No : {{mybank.AccountNo}} <br />
                                                Account Name : {{mybank.AccountName}} <br />

                                            </div>
                                        </div>
                                    </fieldset>
                                    <hr />

                                    <div class="col-md-12">

                                        <div class="col-md-12">
                                            <div class="text-right">

                                                <span class="input-group-btn">
                                                    <button class="btn bg-slate-700 pull-right btn-ladda btn-submit" data-style="slide-down" data-spinner-color="#333" ng-click="submitPayment()" style="width:120px">
                                                        <span class="ladda-label">&nbsp;&nbsp;Submit&nbsp;&nbsp;</span><span class="ladda-spinner"></span>
                                                        <div class="ladda-progress" style="width: 0px;"></div>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </form>
                            <!--/MEMBER DATA-->
                            <!--CONFIRMATION THANK YOU-->
