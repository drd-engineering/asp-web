@model DRD.Models.View.Layout
@{
    ViewBag.Title = "Inbox";
    ViewBag.Submenu = "INBOX";

    if (!Model.isLayout)
    {
        Layout = null;
    }
}

<script src="/assets/js/plugins/buttons/spin.min.js" type="text/javascript"></script>
<script src="/assets/js/plugins/buttons/ladda.min.js" type="text/javascript"></script>
<script src="/assets/js/pages/components_buttons.js" type="text/javascript"></script>

<script src="/assets/vendors/angular-1.5.5/angular.js"></script>
<script src="/assets/vendors/angular-1.5.5/angular-animate.js"></script>
<script src="/Scripts/ui-bootstrap-tpls-1.3.2.js"></script>


@section Styles
{
    <link href="~/assets/css/pages/inbox-list.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/pages/for-all-page.css" rel="stylesheet" type="text/css">
}

<body>

    <h4><a class="btn" href="/inbox/list" style="border-radius:15px;text-align:center;padding:5px;margin-left:20px;font-weight:800;background-color:#5D90AE;color:white;"><i class="icon-envelope"></i></a> @ViewBag.Title</h4>
    <!-- Page container -->
    <section ng-controller="drdController">
        <!-- Content area -->
        <div class="row">
            <div class="col-sm-12 col-md-4" style="margin-bottom:20px">
                <div class="input-group">
                    <input type="text" class="form-control" ng-model="criteria" placeholder="Search" style="height:50px" ng-keyup="$event.keyCode ==  13 && getInboxList(criteria, page, row)">
                    <span class="input-group-btn">
                        <button id="my-button" class="btn btn-default btn-ladda btn-process" type="button" data-style="slide-down" data-spinner-color="#333" ng-click="getInboxList(criteria, page, row)" style="background-color:#075685; color:white; width:50px;height:50px">
                            <span class="ladda-label"><i class="icon-search4"></i></span><span class="ladda-spinner"></span>
                            <div class="ladda-progress" style="width: 0px;"></div>
                        </button>
                    </span>
                </div>
            </div>
        </div>
        <div calss="row">
            <div class="panel panel-flat">
                <div ng-show="!completeLoad" style="text-align:center;padding:50px;">
                    Loading Inbox Data
                </div>
                <div ng-show="!hasInbox && completeLoad" style="text-align:center;padding:50px;">
                    You don't have an inbox yet
                </div>
                <div class="table-responsive" ng-show="isView && hasInbox && completeLoad">
                    <table class="table-xxs table-hover datatable-highlight dataTable no-footer" style="font-size:small;width:100%">
                        <thead>
                            <tr style="background-color:white;">
                                <th width="200">Sender</th>
                                <th>Message</th>
                                <th>Rotation</th>
                                <th width="175px">Created</th>
                            </tr>
                        </thead>
                        <tbody style="width:95%">
                            <tr style="cursor:pointer;height:50px;width:90%;vertical-align:central;{{x.IsUnread ? 'font-weight:bold;' : 'font-weight:normal; background-color:#f3f3f9;'}}" ng-click="do_edit(x.Id);" ng-repeat="x in products">
                                <td width="200"><strong>{{x.prevUserName}}</strong> <small>({{x.prevUserEmail}})</small><br><span style="font-size:10px;text-align:right">{{x.CompanyInbox.Name}}</span></td>
                                <td><strong class="tag {{SetItemClass(x.LastStatus)}}">{{x.LastStatus}}</strong> {{x.DateNote}}</td>
                                <td>{{x.RotationName}}</td>
                                <td width="10%">{{getDateFormated(x.CreatedAt,1)}}</td>
                            </tr>
                            <tr>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div ng-show="hasInbox" class="pagination-container">
                    <div class="pagination">
                        <a class="{{page > 1?'':'disable'}}" data-toggle="tooltip" title="first page"
                            ng-click="page > 1 && changePageInbox(criteria, 1, row)">&lt;&lt;</a>
                        <a class="{{page > 1?'':'disable'}}" data-toggle="tooltip" title="previous page"
                            ng-click="page > 1 && changePageInbox(criteria, page - 1, row)">&lt;</a>
                        <a class="{{rot == page ? 'active':''}}" ng-repeat="rot in paging | limitTo : page+3>paging.length?paging.length:page+3 : page-4<0?0:page-4"
                            ng-click="changePageInbox(criteria, rot, row)">
                            {{rot}}
                        </a>
                        <a class="{{page < paging.length?'':'disable'}}" data-toggle="tooltip" title="next page"
                            ng-click="page < paging.length && changePageInbox(criteria, page + 1, row)">&gt;</a>
                        <a class="{{page < paging.length?'':'disable'}}" data-toggle="tooltip" title="last page"
                            ng-click="page < paging.length && changePageInbox(criteria, paging.length, row)"> &gt; &gt;</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap']) //, 'ui.select2'])

        myApp.controller("drdController", function ($scope, $location, $http, $filter) {
            // pagination
            $scope.paging = [];
            $scope.criteria = "";
            $scope.page = 1;
            $scope.row = 20;

            $scope.product = {};
            $scope.products = [];
            $scope.productCount = [];

            $scope.currPage = 0;
            $scope.isView = false;
            $scope.index = 0;

            $scope.hasInbox = false;
            $scope.completeLoad = false;

            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            angular.element(document).ready(function () {
                $scope.getInboxList($scope.criteria, $scope.page, $scope.row);
                $(".content-wrapper").show();
            });

            /*--------------------------------------------------------------
            DO EDIT
            --------------------------------------------------------------*/

            $scope.do_edit = function (id) {
                location.href = "/inbox?id=" + id;
            }

            /*--------------------------------------------------------------
            GET PRODUCT
            --------------------------------------------------------------*/
            $scope.getInboxList = function (criteria, page, row) {
                $http.post('@Url.Action("GetInboxList", "Inbox")', { criteria: criteria, page: page, pageSize: row }).then(function (response) {
                    if (response.data) {
                        $scope.products = response.data;
                        $scope.index = row * (page - 1);
                        $scope.page = "1";
                        $scope.isView = true;
                        $scope.InboxCountAll(criteria);
                    }
                    $scope.hasInbox = $scope.products.length > 0;
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }
            $scope.InboxCountAll = function (criteria) {
                $http.post('@Url.Action("CountAll", "Inbox")', { criteria: criteria }).then(function (response) {
                    if (response.data) {
                        $scope.paging = [];
                        var jumlahData = response.data;
                        var jumlahPage = Math.ceil(jumlahData / $scope.row);
                        $scope.hasInbox = jumlahData > 0;
                        for (var i = 1; i <= jumlahPage; i++) {
                            $scope.paging.push(i);
                        }
                        $scope.page = "1";
                    }
                    $scope.completeLoad = true;
                }, function (response) {
                    //error handle\
                    var x = 0;
                    $scope.completeLoad = true;
                });
            }
            $scope.changePageInbox = function ( criteria, page, row) {
                $http.post('@Url.Action("GetInboxList", "Inbox")', { criteria: criteria, page: page, pageSize: row }).then(function (response) {
                    if (response.data) {
                        $scope.products = response.data;
                        $scope.index = row * (page - 1);
                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            /*--------------------------------------------------------------
            CONVERT JSON DATE
            --------------------------------------------------------------*/
            $scope.convertJsonDate = function (val) {

                if (val == undefined)
                    return '';
                return new Date(parseInt(val.substr(6)));
            }

            $scope.SetItemClass = function (status) {
                    if (status == "REJECT" || status == "REJECTED") {
                        return "danger";
                    } else if (status == "REVISION") {
                        return "warning";
                    } else if (status == "INFO") {
                        return "default";
                    }
                    return "info";

            }

        });

        $(function () {

        });

        $(document).ready(function () {

        });

    </script>

</body>