@model DRD.Models.View.Layout
@{ 
    ViewBag.Title = "Inbox";
    ViewBag.Submenu = "INBOX";

    if(!Model.isLayout)
    {
        Layout = null;
    }
}

<script src="/assets/js/plugins/buttons/spin.min.js" type="text/javascript"></script>
<script src="/assets/js/plugins/buttons/ladda.min.js" type="text/javascript"></script>
<script src="/assets/js/pages/components_buttons.js" type="text/javascript"></script>

<script src="/assets/vendors/angular-1.5.5/angular.js"></script>
<script src="/assets/vendors/angular-1.5.5/angular-animate.js"></script>
<script src="/Scripts/ui-bootstrap-tpls-1.3.2.js"></script>


<body @*ng-app="drdApp"*@>

    <!-- Page container -->
    <div class="page-container" ng-controller="drdController">
        <!-- Page content -->
        <div class="page-content">


            <!-- Main content -->
            <div class="content-wrapper" style="display:none">
                <!-- Page header -->

                <div class="page-header page-header-default">
                    <div class="page-header-content">
                        
                        <div class="row">

                            <div class="col-md-6">
                                <h4><i class="icon-inbox position-left"></i>Inbox</h4>
                            </div>
                            <div class="col-md-6">
                                <div class="pull-right">
                                    <select ng-model="page" class="form-control" ng-change="changePage(kriteria, page, row)">
                                        <option value="{{x.value}}" ng-repeat="x in paging">{{x.text}}</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content">
                    <div calss="row">
                        <div class="panel panel-flat">

                            <div class="table-responsive" ng-show="isView">
                                <table class="table-xxs table-hover datatable-highlight dataTable no-footer" style="font-size:small;width:100%">
                                    <thead>
                                        <tr>
                                            <th width="25px">No.</th>
                                            <th>Rotation</th>
                                            <th>Activity</th>
                                            <th>Workflow Name</th>
                                            <th width="175px">Created</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr style="cursor:pointer;height:50px;height:50px;vertical-align:central;" ng-click="do_edit(x.Id);" ng-repeat="x in products">
                                            <td>{{$index+1 + index}}</td>
                                            <td>{{x.RotationName}}</td>
                                            <td>{{x.CurrentActivity}}</td>
                                            <td>{{x.WorkflowName}}</td>
                                            <td width="175px">{{convertJsonDate(x.CreatedAt) | date: 'dd/MM/yyyy HH:mm:ss'}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /LIST -->
                </div>
                <!-- /content area -->
            </div>
            <!-- /main content -->
        </div>
        <!-- /page content -->
    </div>
    <!-- /page container -->

    <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap']) //, 'ui.select2'])

        myApp.controller("drdController", function ($scope, $location, $http, $filter) {
            $scope.product = {};
            $scope.products = [];
            $scope.productCount = [];
            $scope.paging = [];
            $scope.kriteria = "";
            $scope.page = 1;
            $scope.row = 20;
            $scope.currPage = 0;
            $scope.isView = false;
            $scope.index = 0;

            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            angular.element(document).ready(function () {

                //$scope.GetPartners();
                $scope.GetInboxList($scope.kriteria, $scope.page, $scope.row);

                $(".content-wrapper").show();
            });

            /*--------------------------------------------------------------
            DO EDIT
            --------------------------------------------------------------*/

            $scope.do_edit = function (id) {
                console.log("ROTATION ID", id);
                location.href = "/inbox?id=" + id;
            }

            /*--------------------------------------------------------------
            GET PRODUCT
            --------------------------------------------------------------*/
            $scope.GetInboxList = function (kriteria, page, row) {
                $http.post('@Url.Action("GetInboxList", "Inbox")', {}).then(function (response) {
                    if (response.data) {
                        $scope.products = response.data;

                        $scope.index = row * (page - 1);

                        $scope.paging = [];
                        /*$scope.getProductCount(kriteria);*/

                        $scope.isView = true;

                        //Ladda.stopAll();
                        console.log("LIST", $scope.products);
                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            $scope.changePage = function (kriteria, page, row) {
                
                $http.post('@Url.Action("GetNodeLiteAll", "Rotation")', { status: '00', topCriteria: kriteria, page: page, pageSize: row }).then(function (response) {
                    if (response.data) {
                        $scope.products = response.data;
                        $scope.index = row * (page - 1);


                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }
            

            /*--------------------------------------------------------------
            CONVERT JSON DATE
            --------------------------------------------------------------*/
            $scope.convertJsonDate = function (val) {
                
                if (val == undefined)
                    return '';
                return new Date(parseInt(val.substr(6)));
            }

            

        });

        $(function () {

        });

        $(document).ready(function () {

        });

    </script>

</body>