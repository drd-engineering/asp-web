@model DRD.Models.View.Layout
@{
    ViewBag.Title = "Inbox";
    ViewBag.Submenu = "INBOX";

    if (!Model.isLayout)
    {
        Layout = null;
    }
}

<script src="/assets/js/plugins/buttons/spin.min.js" type="text/javascript"></script>
<script src="/assets/js/plugins/buttons/ladda.min.js" type="text/javascript"></script>
<script src="/assets/js/pages/components_buttons.js" type="text/javascript"></script>

<script src="/assets/vendors/angular-1.5.5/angular.js"></script>
<script src="/assets/vendors/angular-1.5.5/angular-animate.js"></script>
<script src="/Scripts/ui-bootstrap-tpls-1.3.2.js"></script>


@section Styles
{
    <link href="/assets/css/pages/inbox-list.css" rel="stylesheet" type="text/css">
}

<body @*ng-app="drdApp"*@>

    <!-- Page container -->
    <div class="page-container" ng-controller="drdController">
        <!-- Page content -->
        <div class="page-content">


            <!-- Main content -->
            <div class="content-wrapper" style="display:none">
                <!-- Page header -->

                <div class="page-header page-header-default">
                    <div class="page-header-content">

                        <div class="row">

                            <div class="col-md-6">
                                <h4><i class="icon-inbox position-left"></i>Inbox</h4>
                            </div>
                            <div class="col-md-6">
                                <div class="pull-right">
                                    <select ng-model="page" class="form-control" ng-change="changePageInbox( page, row)">
                                        <option value="{{x.value}}" ng-repeat="x in paging">{{x.text}}</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content">
                    <div calss="row">
                        <div class="panel panel-flat">
                            <div ng-show="!completeLoad" style="text-align:center;padding:50px;">
                                Loading Inbox Data
                            </div>
                            <div ng-show="!hasInbox && completeLoad" style="text-align:center;padding:50px;">
                                You don't have an inbox yet
                            </div>
                            <div class="table-responsive" ng-show="isView && hasInbox && completeLoad">
                                <table class="table-xxs table-hover datatable-highlight dataTable no-footer" style="font-size:small;width:100%">
                                    <thead>
                                        <tr style= "background-color:#f3f3f9;">
                                            <th width="200">Sender</th>
                                            <th>Message</th>
                                            <th>Rotation</th>
                                            <th width="175px">Created</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr style="cursor:pointer;height:50px;height:50px;vertical-align:central;{{x.IsUnread ? 'font-weight:bold;' : 'font-weight:normal; background-color:#f3f3f9;'}}" ng-click="do_edit(x.Id);" ng-repeat="x in products">
                                            <td width="200"><strong>{{x.prevUserName}}</strong> <small>({{x.prevUserEmail}})</small></td>
                                            <td><strong class="tag {{SetItemClass(x.LastStatus)}}">{{x.LastStatus}}</strong> {{x.DateNote}}</td>
                                            <td>{{x.RotationName}}</td>
                                            <td width="175px">{{convertJsonDate(x.CreatedAt) | date: 'dd/MM/yyyy HH:mm:ss'}}</td>
                                        </tr>
                                        <tr>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /LIST -->
                </div>
                <!-- /content area -->
            </div>
            <!-- /main content -->
        </div>
        <!-- /page content -->
    </div>
    <!-- /page container -->

    <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap']) //, 'ui.select2'])

        myApp.controller("drdController", function ($scope, $location, $http, $filter) {
            $scope.product = {};
            $scope.products = [];
            $scope.productCount = [];
            $scope.paging = [];
            $scope.kriteria = "";
            $scope.page = 1;
            $scope.row = 20;
            $scope.currPage = 0;
            $scope.isView = false;
            $scope.index = 0;

            $scope.hasInbox = false;
            $scope.completeLoad = false;

            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            angular.element(document).ready(function () {
                $scope.GetInboxList($scope.page, $scope.row);
                $(".content-wrapper").show();
            });

            /*--------------------------------------------------------------
            DO EDIT
            --------------------------------------------------------------*/

            $scope.do_edit = function (id) {
                location.href = "/inbox?id=" + id;
            }

            /*--------------------------------------------------------------
            GET PRODUCT
            --------------------------------------------------------------*/
            $scope.GetInboxList = function (page, row) {
                $http.post('@Url.Action("GetInboxList", "Inbox")', { page: page, pageSize: row }).then(function (response) {
                    if (response.data) {
                        $scope.products = response.data;
                        $scope.index = row * (page - 1);
                        $scope.page = "1";
                        $scope.isView = true;
                        $scope.InboxCountAll();
                    }
                    $scope.hasInbox = $scope.products.length > 0;
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }
            $scope.InboxCountAll = function () {
                $http.post('@Url.Action("CountAll", "Inbox")', { }).then(function (response) {
                    if (response.data) {
                        var jumlahData = response.data;
                        var jumlahPage = Math.ceil(jumlahData / $scope.row);
                        $scope.hasInbox = jumlahData > 0;
                        for (var i = 1; i <= jumlahPage; i++) {
                            $scope.paging.push({ value: i, text: i });
                        }
                        $scope.page = "1";
                    }
                    $scope.completeLoad = true;
                }, function (response) {
                    //error handle\
                    var x = 0;
                    $scope.completeLoad = true;
                });
            }
            $scope.changePageInbox = function ( page, row) {
                $http.post('@Url.Action("GetInboxList", "Inbox")', { page: page, pageSize: row }).then(function (response) {
                    if (response.data) {
                        $scope.products = response.data;
                        $scope.index = row * (page - 1);
                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            /*--------------------------------------------------------------
            CONVERT JSON DATE
            --------------------------------------------------------------*/
            $scope.convertJsonDate = function (val) {

                if (val == undefined)
                    return '';
                return new Date(parseInt(val.substr(6)));
            }

            $scope.SetItemClass = function (status) {
                    if (status == "REJECT" || status == "REJECTED") {
                        return "danger";
                    } else if (status == "REVISION") {
                        return "warning";
                    } else if (status == "INFO") {
                        return "default";
                    } 
                    return "info";
                    
            }

        });

        $(function () {

        });

        $(document).ready(function () {

        });

    </script>

</body>