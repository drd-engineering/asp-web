    <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap', 'ngOnlyNumberApp', 'ngFileUpload', 'uiGmapgoogle-maps', 'google.places'])

        myApp.config(['uiGmapGoogleMapApiProvider', function (GoogleMapApiProviders) {
            GoogleMapApiProviders.configure({
                china: true
            });
        }]);

        myApp.controller("drdController", function ($scope, Upload, $location, $http, $filter, uiGmapGoogleMapApi, uiGmapIsReady) {
            // modal member
            $scope.model = {};
            $scope.wizarno = 'product';
            $scope.model.Id = 0;
            $scope.model.Image1 = "no_picture.png";
            $scope.model.Image2 = "no_picture.png";
            $scope.model.ImageCard = "no_picture.png";
            $scope.isUploadImage1 = 0;
            $scope.isUploadImage2 = 0;
            $scope.isUploadImageCard = 0

            $scope.subscriptionId = "";
            $scope.userNumber = "";

            //
            // MAP
            //
            $scope.xmarkers = [];

            $scope.model.Autocomplete = null;

            // for terms and conditions
            $scope.popupTnC = function () {
                $("#modal_tnc").modal("show");
            }
        
            // for the map
            $scope.map = {
                control: {},
                center: {
                    latitude: -6.2893464,
                    longitude: 106.9513492
                },
                draggable: true,
                zoom: 16
            };

            // map options
            $scope.options = {
                scrollwheel: false,
                //center: new google.maps.LatLng($scope.currentLocation.latitude, $scope.currentLocation.longitude),
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };


            $scope.markerTemplate = {
                id: 0,
                coords: {
                    latitude: 0,
                    longitude: 0
                },
                //"window": {
                //    //"title": "Portland, OR"
                //    "title": "Nasio"
                //},
                icon: { url: "/assets/images/ic_markerred64.png" },
                control: {},
                options: { draggable: true }
            };
            $scope.currentLocation = { latitude: -6.2909744, longitude: 106.8046101 };
            //$scope.currentLocation = { latitude: 0, longitude: 0 };
            $scope.dummyCurrentLocation = { latitude: 0, longitude: 0 };

            uiGmapIsReady.promise().then(function (map_instances) {
                //$scope.map.control.refresh({
                //    latitude: 48,
                //    longitude: 2.3
                //});
                $scope.initMap();
            });

            uiGmapGoogleMapApi.then(function (maps) {
                //console.log('Google Maps loaded');
                //$scope.map = {
                //    center: {
                //        latitude: -23.598763,
                //        longitude: -46.676547
                //    },
                //    zoom: 13
                //};
            });

            $scope.$on('g-places-autocomplete:select', function (event, place) {

                $scope.currentLocation.latitude = place.geometry.location.lat();
                $scope.currentLocation.longitude = place.geometry.location.lng();

                $scope.map.center.latitude = $scope.currentLocation.latitude;
                $scope.map.center.longitude = $scope.currentLocation.longitude;

                $scope.getLocationAddress($scope.currentLocation.latitude, $scope.currentLocation.longitude);

                $scope.createMarker();
            });
            //
            //END MAP
            //

           
            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            function initValues() {
            }

            angular.element(document).ready(function () {
                $scope.SubscriptType=@Html.Raw(Json.Encode(Model.SubscriptType));
                $scope.MemberTitles=@Html.Raw(Json.Encode(Model.MemberTitles));
                $scope.model.Image1 = "no_picture.png";
                $scope.model.Image2 = "no_picture.png";
                $scope.model.ImageCard = "no_picture.png";
                $(".content").show();
            });

            $scope.initData = function () {

            }

            /*--------------------------------------------------------------
            UPLOAD IMAGE FILE
            --------------------------------------------------------------*/
            $scope.uploadFiles = function (idx, file, errFiles) {
                $scope.f = file;
                $scope.errFile = errFiles && errFiles[0];
                if (file) {
                    file.upload = Upload.upload({
                        url: '/updownfile/uploadimage?idx=' + idx + '&fileType=9',
                        data: { MyImages: file }
                    });

                    file.upload.then(function (response) {
                        //$timeout(function () {
                        file.result = response.data;

                        if (idx == 0) {
                            $scope.model.Image1 = file.result.filename;
                            $scope.isUploadImage1 = 1;
                        } else if (idx == 1) {
                            $scope.model.Image2 = file.result.filename;
                            $scope.isUploadImage2 = 1;
                        } else if (idx == 2) {
                            $scope.model.ImageCard = file.result.filename;
                            $scope.isUploadImageCard = 1;
                        }
                        //});
                    }, function (response) {
                        if (response.status > 0)
                            $scope.errorMsg = response.status + ': ' + response.data;
                    }, function (evt) {
                        file.progress = Math.min(100, parseInt(100.0 * evt.loaded / evt.total));
                    });
                } else if ($scope.errFile != null) {
                    showInfo("Error upload file : " + $scope.errFile.$error + " (" + $scope.errFile.$errorParam + ")");
                }
            }

            /*--------------------------------------------------------------
            SAVE PRODUCT
            --------------------------------------------------------------*/
            $scope.saveProduct = function () {
                var btn = Ladda.create( document.querySelector( '.btn-submit' ) );
                btn.start();

                $http.post('@Url.Action("registration", "company")',
                    {
                        registry: {
                            MemberTitleId: $scope.model.MemberTitleId,
                            MemberName: $scope.model.MemberName,
                            MemberPhone: $scope.model.MemberPhone,
                            MemberEmail: $scope.model.MemberEmail,
                            SubscriptTypeId:$scope.SubscriptType.Id,
                            CompanyName: $scope.model.CompanyName,
                            CompanyPhone: $scope.model.CompanyPhone,
                            CompanyEmail: $scope.model.CompanyEmail,
                            CompanyAddress: $scope.model.CompanyAddress,
                            CompanyPointLocation: $scope.model.PointLocation,
                            Latitude: $scope.currentLocation.latitude,
                            Longitude: $scope.currentLocation.longitude,

                        }
                    }).then(function (response) {
                        btn.stop();
                        if (response.data) {
                            var result = response.data;
                            if (result.UserNumber == "DBLEMAIL") {
                                showInfo("User email already used by other.");
                                return;
                            }
                            if (result.SubscriptionId == "DBLEMAIL") {
                                showInfo("Company email already used by other.");
                                return;
                            }

                            $scope.wizarno = 'success';

                            $scope.subscriptionId = result.SubscriptionId;
                            $scope.userNumber = result.UserNumber;
                        }
                    }, function (response) {
                        //error handle\
                        btn.stop();
                        var x = 0;
                    });
            }

            $scope.updateProduct = function () {
                if (!$scope.isValidForm($scope.myForm))
                    return;

                if ($scope.model.PointLocation == undefined) {
                    showInfo("Point location must be filled.");
                    return;
                }
                $scope.saveProduct();
            }

            $scope.isValidForm = function (theForm) {
                var isvalid = theForm.$valid;
                return isvalid;
            };

            $scope.scrollingPage = function (id) {
                $('html, body').animate({
                    scrollTop: $(id).offset().top
                }, 200);
            }
        $(function () {});

        $(document).ready(function () {})
    </script>

</body>