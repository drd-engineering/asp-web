<body class="login-container" ng-app="drdApp" style="margin-top:-50px;">
    <!-- Page container -->
    <div class="page-container" ng-controller="drdController">
        <!-- Page content -->
        <div class="page-content">
            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Horizontal form options -->
                <!-- Content area -->
                <div class="content" style="display:none;">

                    <!-- Basic layout-->
                    <div class="panel panel-body login-form" style="width:800px;">
                        <div style="border:solid;border-color:cornflowerblue;border-width:1px;padding:10px;min-height:200px;width:100%;text-align:right">
                            <img src="../../Images/back_reg2.jpg" style="max-height:100%;max-width:100%"/>
                        </div>
                        <div class="panel-body">
                            <!--MEMBER DATA-->
                            <form name="myForm" class="form-horizontal" autocomplete="off">
                                <div ng-show="wizarno=='product'">
                                    <fieldset>
                                        <div class="col-md-12">
                                            <h4>User</h4>
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <label class="control-label">Name</label>
                                                    <input type="text" class="form-control" ng-model="model.Name" ng-required="wizarno=='product'" maxlength="50" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label class="control-label">Phone</label>
                                                    <input type="text" class="form-control" ng-model="model.Phone" ng-required="wizarno=='product'" maxlength="20" ng-only-number />
                                                </div>
                                                <div class="col-md-8">
                                                    <label class="control-label">Email</label>
                                                    <input type="email" class="form-control" ng-model="model.Email" ng-required="wizarno=='product'" maxlength="50" ng-readonly="model.Id!=0" />
                                                </div>
                                            </div>
                                            <hr />
                                        </div>
                                    </fieldset>
                                    <hr />
                                    <div class="col-md-12">
                                        <div class="col-md-12">
                                            <div class="text-right">
                                                <div class="col-md-12">
                                                    <ng-include src="'/Include/PopupTnC'"></ng-include>
                                                </div>
                                                <span class="input-group-btn">
                                                    <button class="btn bg-slate-700 pull-right btn-submit" data-style="slide-down" data-spinner-color="#333" ng-click="updateProduct()" style="width:120px">
                                                        <span class="ladda-label">&nbsp;&nbsp;Submit&nbsp;&nbsp;</span><span class="ladda-spinner"></span>
                                                        <div class="ladda-progress" style="width: 0px;"></div>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!--/MEMBER DATA-->
                            <!--CONFIRMATION THANK YOU-->
                            <div ng-show="wizarno=='success'">
                                <div class="col-md-12">
                                    @*<div class="alert alert-success alert-styled-left">*@
                                    Thank you for registering for the DRD subscription.<br />
                                    Subscription registration is successful.<br /><br />

                                    Subscription Id: <b>{{subscriptionId}}</b><br />
                                    User number: <b>{{userNumber}}<br /></b><br />

                                    The password will be sent to email <b>{{model.MemberEmail}}</b>.<br />
                                    @*</div>*@
                                </div>
                            </div>
                            <!--/CONFIRMATION THANK YOU-->
                            <!-- View map modal -->
                            <div id="modal_select_map" class="modal_hide">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header bg-primary">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h6 class="modal-title">Select Location</h6>
                                        </div>

                                        <input type="text" class="form-control" g-places-autocomplete ng-model="model.Autocomplete" placeholder="Enter location" />
                                        <div id="map_canvas" class="modal-body" style="height:400px">
                                            <ui-gmap-google-map center='map.center'
                                                                zoom='map.zoom'
                                                                draggable="true"
                                                                options="options"
                                                                control="map.control" class="map_canvas">
                                            </ui-gmap-google-map>
                                        </div>

                                        <label style="text-align:center;width:100%;margin-top:10px">{{model.LocationDetail}}</label>
                                        <div style="width:100%;height:1px;background-color:dimgrey"></div>
                                        <div class="modal-footer">
                                            @*<button type="button" class="btn btn-link" ng-click="refreshMap(map)()">Refresh Map</button>*@
                                            <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-link" data-dismiss="modal" ng-click="setLocation()">Set</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- View map modal -->

                        </div>
                    </div>


                    <!-- /basic layout -->




                </div>
                <!-- /vertical form options -->
            </div>
            <!-- /Main content -->
        </div>
        <!-- /Page content -->
    </div>
