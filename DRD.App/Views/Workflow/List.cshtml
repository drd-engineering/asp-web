@model DRD.Models.View.Layout
@{
    ViewBag.Title = "Workflow";
    ViewBag.Submenu = "WORKFLOW";
}
@section Scripts
{
    <script src="/assets/js/plugins/buttons/spin.min.js" type="text/javascript"></script>
    <script src="/assets/js/plugins/buttons/ladda.min.js" type="text/javascript"></script>
    <script src="/assets/js/pages/components_buttons.js" type="text/javascript"></script>

    <script src="/assets/vendors/angular-1.5.5/angular.js"></script>
    <script src="/assets/vendors/angular-1.5.5/angular-animate.js"></script>
    <script src="/Scripts/ui-bootstrap-tpls-1.3.2.js"></script>
}
@section Styles{
    <link href="~/assets/css/pages/for-all-page.css" rel="stylesheet" type="text/css">
}
<style>
    .format-number {
        text-align: right;
    }
</style>
<body @*ng-app="makayaApp"*@>
    <h4><a class="btn" href="/workflow/list" style="border-radius:15px;text-align:center;padding:5px;margin-left:20px;font-weight:800;background-color:#5D90AE;color:white;"><i class="icon-opt"></i></a> @ViewBag.Title</h4>
    <section ng-controller="drdController">
        <!-- Content area -->
        <div class="content" style="display:none">
            <!-- Contextual classes -->
            <div class="row">
                <div class="col-sm-12 col-md-4" style="margin-bottom:20px">
                    <div class="input-group">
                        <input type="text" class="form-control" ng-model="criteria" placeholder="Search" style="height:50px" ng-keyup="$event.keyCode ==  13 && findWorkflows(criteria, page, row)">
                        <span class="input-group-btn">
                            <button id="my-button" class="btn btn-default btn-ladda btn-process" type="button" data-style="slide-down" data-spinner-color="#333" ng-click="findWorkflows(criteria, page, row)" style="background-color:#075685; color:white; width:50px;height:50px">
                                <span class="ladda-label"><i class="icon-search4"></i></span><span class="ladda-spinner"></span>
                                <div class="ladda-progress" style="width: 0px;"></div>
                            </button>
                        </span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="">
                        <button class="btn btn-flat" style="background-color:#075685; color:white; width:100px;height:50px" data-toggle="tooltip" title="create new workflow" ng-click="addProduct('@Model.key')">
                            <i class="icon-plus2"></i> Add
                        </button>
                    </div>
                </div>
            </div>
            <div style="height:10px"></div>
            <!-- LIST -->
            <div calss="row" ng-init="findWorkflows(criteria, page, row)">
                <div class="panel panel-flat">
                    <div ng-show="!hasWorkflow" style="text-align:center;padding:50px;">
                        You don't have a workflow yet or there is no match workflow with the search criteria.
                    </div>
                    <div class="table-responsive" ng-show="isView && hasWorkflow">
                        <table class="table-xxs table-hover datatable-highlight dataTable no-footer" style="font-size:small;width:100%">
                            <thead>
                                <tr>
                                    <th width="25px"></th>
                                    <th>Name</th>
                                    <th width="70px">Type</th>
                                    <th width="70px">Active</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr style="cursor:pointer;height:50px;height:50px;vertical-align:central;" ng-repeat="x in products">
                                    <td ng-click="do_edit(x.Id);" width="25px">{{$index+1 + index}}</td>
                                    <td ng-click="do_edit(x.Id);">{{x.Name}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div ng-show="hasWorkflow" class="pagination-container">
                        <div class="pagination">
                            <a class="{{page > 1?'':'disable'}}" data-toggle="tooltip" title="first page"
                               ng-click="page > 1 && changePageWorkflows(criteria, 1, row)">&lt;&lt;</a>
                            <a class="{{page > 1?'':'disable'}}" data-toggle="tooltip" title="previous page"
                               ng-click="page > 1 && changePageWorkflows(criteria, page - 1, row)">&lt;</a>
                            <a class="{{rot == page ? 'active':''}}" ng-repeat="rot in paging | limitTo : page+3>paging.length?paging.length:page+3 : page-4<0?0:page-4"
                               ng-click="changePageWorkflows(criteria, rot, row)">
                                {{rot}}
                            </a>
                            <a class="{{page < paging.length?'':'disable'}}" data-toggle="tooltip" title="next page"
                               ng-click="page < paging.length && changePageWorkflows(criteria, page + 1, row)">&gt;</a>
                            <a class="{{page < paging.length?'':'disable'}}" data-toggle="tooltip" title="last page"
                               ng-click="page < paging.length && changePageWorkflows(criteria, paging.length, row)"> &gt; &gt;</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /LIST -->
        </div>
        <!-- /content area -->
    </section>
    <script type="text/javascript">

        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap']) //, 'ui.select2'])

        myApp.controller("drdController", function ($scope, $location, $http, $filter) {
            $scope.product = {};
            $scope.products = [];
            $scope.productCount = [];
            $scope.paging = [];
            $scope.criteria = "";
            $scope.page = 1;
            $scope.row = 20;
            $scope.currPage = 0;
            $scope.isView = false;
            $scope.index = 0;
            $scope.hasWorkflow = false;

            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            angular.element(document).ready(function () {

                //$scope.GetPartners();
                $(".content").show();
            });

            /*--------------------------------------------------------------
            DO EDIT
            --------------------------------------------------------------*/

            $scope.do_edit = function (id) {
                location.href = "/Workflow?id="+ id;
            }
            $scope.addProduct = function (mid) {
                location.href = "/Workflow/New";
            }
            $scope.checkFlag = function (val, bitval) {
                return ((val & bitval) == bitval);
            }
            /*--------------------------------------------------------------
                POPUP WORKFLOW
            --------------------------------------------------------------*/
            $scope.findWorkflows = function (criteria, page, row) {
                $scope.workflows = [];
                $http.post('@Url.Action("FindWorkflows", "Workflow")', { topCriteria: criteria, page: page, pageSize: row}).then(function (response) {
                    if (response.data) {
                        $scope.products = response.data;
                        $scope.index = row * (page - 1);
                        $scope.findWorkflowsCountAll(criteria);
                        $scope.isView = true;
                    }
                    $scope.hasWorkflow = $scope.products.length > 0;
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }
            $scope.findWorkflowsCountAll = function (criteria) {
                $http.post('@Url.Action("FindWorkflowsCountAll","Workflow")', { topCriteria: criteria }).then(function (response) {
                    if (response.data) {
                        $scope.paging = [];
                        var jumlahData = response.data;
                        var jumlahPage = Math.ceil(jumlahData / $scope.row);
                        for (var i = 1; i <= jumlahPage; i++) {
                            $scope.paging.push(i);
                        }
                        $scope.page = "1";
                    }
                }, function (response) {
                    var x = 0;
                });
            }
            $scope.changePageWorkflows = function (criteria, page, row) {
                $scope.products = [];
                $http.post('@Url.Action("FindWorkflows", "Workflow")', { topCriteria: criteria, page: page, pageSize: row}).then(function (response) {
                    if (response.data) {
                        $scope.products = response.data;
                        $scope.index = row * (page - 1);
                        $scope.products.forEach(
                            function (item) {
                                item.CreatedAt = $scope.getDateFormated(item.CreatedAt);
                            }
                        );
                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }
            /*--------------------------------------------------------------
                END POPUP WORKFLOW
            --------------------------------------------------------------*/
            /*--------------------------------------------------------------
            CONVERT JSON DATE
            --------------------------------------------------------------*/
            $scope.convertJsonDate = function (val) {
                if (val == undefined)
                    return '';
                return new Date(parseInt(val.substr(6)));
            }

        });

        $(function () {

        });

        $(document).ready(function () {
        });
    </script>
</body>