@model DRD.Models.View.Layout
@{
    ViewBag.Title = "Workflow";
    ViewBag.Submenu = "WORKFLOW";

}

<script src="/assets/js/plugins/buttons/spin.min.js" type="text/javascript"></script>
<script src="/assets/js/plugins/buttons/ladda.min.js" type="text/javascript"></script>
<script src="/assets/js/pages/components_buttons.js" type="text/javascript"></script>

<script src="/assets/vendors/angular-1.5.5/angular.js"></script>
<script src="/assets/vendors/angular-1.5.5/angular-animate.js"></script>
<script src="/Scripts/ui-bootstrap-tpls-1.3.2.js"></script>

<style>
    .format-number {
        text-align: right;
    }
</style>
<body @*ng-app="makayaApp"*@>

    <div class="panel panel-flat">
        <div class="panel-heading">

            <!-- Page container -->
            <div class="page-container" ng-controller="drdController">
                <!-- Page content -->
                <div class="page-content">


                    <!-- Main content -->
                    <div class="content-wrapper">
                        <h4>Workflow</h4>

                        <!-- Page header -->
                        <div class="page-header page-header-default">
                            <div class="page-header-content">
                                <div class="page-title">
                                    <div class="row">
                                        <div class="col-lg-10">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="icon-search4"></i></span>
                                                <input type="text" class="form-control" ng-model="kriteria" placeholder="Entering data search criteria" ng-keyup="$event.keyCode == 13 && findWorkflows(kriteria, page, row)">
                                                <span class="input-group-btn">
                                                    <button id="my-button" class="btn btn-default btn-ladda btn-process" type="button" data-style="slide-down" data-spinner-color="#333" ng-click="findWorkflows(kriteria, page, row)" style="width:120px">
                                                        <span class="ladda-label">Process</span><span class="ladda-spinner"></span>
                                                        <div class="ladda-progress" style="width: 0px;"></div>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- /page header -->
                        <!-- Content area -->

                        <div class="content" style="display:none">
                            <!-- Contextual classes -->
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="">
                                        <button class="btn border-slate text-slate-800 btn-flat" ng-click="addProduct('@Model.key')">
                                            &nbsp;&nbsp;Add New&nbsp;&nbsp;
                                        </button>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="pull-right">
                                        <select ng-model="page" class="form-control" ng-change="changePageWorkflows(kriteria, page, row)">
                                            <option value="{{x.value}}" ng-repeat="x in paging">{{x.text}}</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div style="height:10px"></div>
                            <!-- LIST -->
                            <div calss="row" ng-init="findWorkflows(kriteria, page, row)">
                                <div class="panel panel-flat">
                                    <div class="table-responsive" ng-show="isView">
                                        <table class="table-xxs  table-hover datatable-highlight no-border dataTable no-footer" style="font-size:small;width:100%">
                                            <thead>
                                                <tr>
                                                    <th width="25px"></th>
                                                    <th>Name</th>
                                                    <th width="70px">Type</th>
                                                    <th width="70px">Active</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr style="cursor:pointer;min-height:50px;vertical-align:central;" ng-repeat="x in products">
                                                    <td ng-click="do_edit($index);" width="25px">{{$index+1 + index}}</td>
                                                    <td ng-click="do_edit($index);">{{x.Name}}</td>
                                                    <td ng-click="do_edit($index);">{{(x.WfType==1?'Draft':'Ready')}}</td>
                                                    <td ng-click="do_edit($index);" style="text-align:center">{{(x.IsActive?"√":"-")}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- /LIST -->

                        </div>
                        <!-- /content area -->
                    </div>
                    <!-- /main content -->
                </div>
                <!-- /page content -->
            </div>
            <!-- /page container -->

        </div>
        </div>
    <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap']) //, 'ui.select2'])

        myApp.controller("drdController", function ($scope, $location, $http, $filter) {
            $scope.product = {};
            $scope.products = [];
            $scope.productCount = [];
            $scope.paging = [];
            $scope.kriteria = "";
            $scope.page = 1;
            $scope.row = 20;
            $scope.currPage = 0;
            $scope.isView = false;
            $scope.index = 0;

            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            angular.element(document).ready(function () {

                //$scope.GetPartners();
                $(".content").show();
            });

            /*--------------------------------------------------------------
            DO EDIT
            --------------------------------------------------------------*/

            $scope.do_edit = function (id) {
                location.href = "/Workflow?id="+ id;
            }
            $scope.addProduct = function (mid) {
                location.href = "/Workflow/New";
            }
            $scope.checkFlag = function (val, bitval) {
                return ((val & bitval) == bitval);
            }
            /*--------------------------------------------------------------
            GET ASSET ITEM
            --------------------------------------------------------------*/
            $scope.findWorkflows = function (kriteria, page, row) {
                var btn = Ladda.create(document.querySelector('.btn-process'));
                btn.start();
                $scope.products = [];
                $http.post('@Url.Action("FindWorkflows", "Workflow")', { topCriteria: kriteria, page: page, pageSize: row }).then(function (response) {
                    btn.stop();
                    if (response.data) {
                        $scope.products = response.data.Items;
                        $scope.index = row * (page - 1);
                        $scope.paging = [];
                        var jumlahData = response.data.Count;
                        var jumlahPage = Math.ceil(jumlahData / $scope.row);
                        for (var i = 1; i <= jumlahPage; i++) {
                            $scope.paging.push({ value: i, text: i });
                        }
                        $scope.page = "1";
                        $scope.isView = true;
                    }
                }, function (response) {
                    btn.stop();
                    //error handle\
                    var x = 0;
                });
            }

            $scope.changePageWorkflows = function (kriteria, page, row) {
                $scope.products = [];
                $http.post('@Url.Action("FindWorkflows", "Workflow")', { topCriteria: kriteria, page: page, pageSize: row }).then(function (response) {
                    if (response.data) {
                        $scope.products = response.data;
                        $scope.index = row * (page - 1);
                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }
            /*--------------------------------------------------------------
            GENERAL FUNCTION
            --------------------------------------------------------------*/
            /*--------------------------------------------------------------
            CONVERT JSON DATE
            --------------------------------------------------------------*/
            $scope.convertJsonDate = function (val) {
                if (val == undefined)
                    return '';
                return new Date(parseInt(val.substr(6)));
            }

        });

        $(function () {

        });

        $(document).ready(function () {
        });
    </script>

</body>