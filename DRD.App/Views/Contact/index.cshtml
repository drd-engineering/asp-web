                                    <p>Personal</p>
                                    <br />
                                </div>
                                <div class="card-content">
                                    <p>58 Contacts</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- end of CARD 1 -->
            <!-- CARD 2 -->
            <div class="col-md-3">
                <div class="highlight-card">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-4">
                                <div class="card-image"><img src="~/Images/Member/icon_female.png" /></div>
                            </div>
                            <div class="col-xs-8">
                                <div class="card-title">
                                    <p>PT Simposium Pratama</p>
                                </div>
                                <div class="card-content">
                                    <p>158 Contacts</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- end of CARD 2 -->
            <!-- CARD 3 -->
            <div class="col-md-3">
                <div class="highlight-card">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-4">
                                <div class="card-image"><img src="~/Images/Member/icon_female.png" /></div>
                            </div>
                            <div class="col-xs-8">
                                <div class="card-title">
                                    <p>PT Simposium Pratama</p>
                                </div>
                                <div class="card-content">
                                    <p>2358 Contacts</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- end of CARD 3 -->
        </div>
    </section>

    <!-- CONTACT-LIST SECTION -->
    <section class="panel" id="contact-list">
        <!-- Page container -->
        <div class="page-container invitation-list" ng-controller="drdController">
            <!-- Page content -->

            <div class="panel-default page-content">

                <!-- Main content -->
                <div class="content-wrapper">
                    <!-- Page header -->
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">
                                <h4><i class="icon-users2 position-left"></i>Personal</h4>
                                <br />

                                <div class="row">
                                    <div class="col-lg-10">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="icon-search4"></i></span>
                                            <input type="text" class="form-control" ng-model="kriteria" placeholder="Entering data search criteria" ng-keyup="$event.keyCode == 13 && getLiteProducts(kriteria, page, row)">
                                            <span class="input-group-btn">
                                                <button id="my-button" class="btn btn-default btn-ladda btn-process" type="button" data-style="slide-down" data-spinner-color="#333" ng-click="getLiteProducts(kriteria, page, row)" style="width:120px">
                                                    <span class="ladda-label">Process</span><span class="ladda-spinner"></span>
                                                    <div class="ladda-progress" style="width: 0px;"></div>
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <!-- /page header -->
                    <!-- Content area -->

                    <div class="content" style="display:none">
                        <!-- Contextual classes -->
                        <!-- LIST -->
                        <div calss="row">


                            <div class="panel panel-flat no-border">

                                <div class="table-responsive" ng-show="isView">

                                    <table class="table-xs">
                                        <tbody>
                                            <tr ng-repeat="x in products">

                                                <td>
                                                    <img ng-src="/Images/Member/{{x.Invited.ImageProfile}}" />
                                                    &ensp;&ensp;{{x.Invited.Name}}
                                                </td>
                                                <td>{{x.Invited.Phone}}</td>
                                                <td>{{x.Invited.Email}}</td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- PAGINATION -->
                        <div class="row">

                            <div class="col-md-6">
                                <div class="pull-right">
                                    <select ng-model="page" class="form-control" ng-change="changePage(kriteria, page, row)">
                                        <option value="{{x.value}}" ng-repeat="x in paging">{{x.text}}</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <!-- end of PAGINATION -->
                        <!-- /LIST -->

                    </div>
                    <!-- /content area -->
                </div>
                <!-- /main content -->
            </div>
            <!-- /page content -->
        </div>
        <!-- /page container -->


    </section>



    <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap']) //, 'ui.select2'])

        myApp.controller("drdController", function ($scope, $location, $http, $filter) {
            $scope.companies = {};
            $scope.product = {};
            $scope.products = [];
            $scope.productCount = [];
            $scope.paging = [];
            $scope.kriteria = "";
            $scope.page = 1;
            $scope.row = 20;
            $scope.currPage = 0;
            $scope.isView = false;
            $scope.index = 0;

            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            angular.element(document).ready(function () {
                $(".content").show();
                $scope.getAllCompanies();
                $scope.getLiteProducts($scope.kriteria, $scope.page, $scope.row);
            });


            /*--------------------------------------------------------------
            GET PRODUCT
            --------------------------------------------------------------*/
            $scope.getAllCompanies = function () {
                $scope.companies = {}; // ga penting??
                $http.get('@Url.Action("GetData", "Contact")')
                    .then(function (response) {
                        $scope.companies = response.data;
                    
                });
            }

            $scope.getLiteProducts = function (kriteria, page, row) {
                var btn = Ladda.create(document.querySelector('.btn-process'));
                btn.start();
                $scope.products = [];
                $http.post('@Url.Action("GetInvitedLiteAll", "invitation")', { topCriteria: kriteria, page: page, pageSize: row }).then(function (response) {
                    btn.stop();
                    if (response.data) {
                        $scope.products = response.data;

                        $scope.index = row * (page - 1);

                        $scope.paging = [];
                        $scope.getProductCount(kriteria);

                        $scope.isView = true;

                        //Ladda.stopAll();

                    }
                }, function (response) {
                    btn.stop();
                    //error handle\
                    var x = 0;
                });
            }

            $scope.changePage = function (kriteria, page, row) {
                $scope.products = [];
                $http.post('@Url.Action("GetInvitedLiteAll", "invitation")', { topCriteria: kriteria, page: page, pageSize: row }).then(function (response) {
                    if (response.data) {
                        $scope.products = response.data;
                        $scope.index = row * (page - 1);


                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            $scope.getProductCount = function (kriteria) {
                $http.post('@Url.Action("GetInvitedLiteAllCount", "invitation")', { topCriteria: kriteria }).then(function (response) {
                    if (response.data) {

                        var jumlahData = response.data;
                        var jumlahPage = Math.ceil(jumlahData / $scope.row);
                        for (var i = 1; i <= jumlahPage; i++) {
                            $scope.paging.push({ value: i, text: i });
                        }

                        $scope.page = "1";

                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            /*--------------------------------------------------------------
            GENERAL FUNCTION
            --------------------------------------------------------------*/
            $scope.addMember = function (mid) {
                location.href = "/invitation/invitation?mid=" + mid;
            }

            /*--------------------------------------------------------------
            CONVERT JSON DATE
            --------------------------------------------------------------*/
            $scope.convertJsonDate = function (val) {
                if (val == undefined)
                    return '';
                return new Date(parseInt(val.substr(6)));
            }

        });

        $(function () {

        });

        $(document).ready(function () {

        });

    </script>

</body>