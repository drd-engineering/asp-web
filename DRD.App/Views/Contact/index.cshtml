@model DRD.Models.View.Layout
@{
    ViewBag.Title = "Contact";
    ViewBag.Submenu = "CONTACT";
}

<script src="/assets/js/plugins/buttons/spin.min.js" type="text/javascript"></script>
<script src="/assets/js/plugins/buttons/ladda.min.js" type="text/javascript"></script>
<script src="/assets/js/pages/components_buttons.js" type="text/javascript"></script>

<script src="/assets/vendors/angular-1.5.5/angular.js"></script>
<script src="/assets/vendors/angular-1.5.5/angular-animate.js"></script>
<script src="/Scripts/ui-bootstrap-tpls-1.3.2.js"></script>

<style>

    .no-border, td {
        border: none !important;
    }

    .panel, .page-header-default {
        box-shadow: none;
    }

    td img {
        height: 40px;
        width: 40px;
        border-radius: 50%;
    }

    .table-xs {
        font-size: small;
        width: 100%;
    }

    .panel-heading {
        /*make'em transparent, cause of panel in panel thing*/
        background-color: #f5f5f5 !important;
    }
    .col-container{
        display: table; /* Make the container element behave like a table */
        width: 100%; /* Set full-width to expand the whole page */
    }
    .col{
        display: table-cell; /* Make elements inside the container behave like table cells */
    }
    .panel {
        border: none;
    }

    .highlight-container {
        background-color: #f5f5f5;
        padding: 0;
        width: inherit;
    }

        .highlight-container .container {
            width: inherit;
        }

    .highlight-card {
        cursor: pointer;
        background-color: white;
        margin: inherit 10px;
        padding: 10px;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        min-height: 100px;
    }

    .highlight-card:hover {
        box-shadow: 0px 0px 3px 0px rgba(0,0,0,0.3);
    }
    .light {
        outline: 3px solid #5D90AE;
        color: #5D90AE;
        font-weight: 700;
    }
        .highlight-card .card-image img {
            height: 40px;
            width: 40px;
            border-radius: 50%;
        }

        .highlight-card .card-title {
            /*similiar with medium-text class, font-size's different*/
            font-weight: 400;
            line-height: 1.25;
            font-size: 14px;
        }

        .highlight-card .card-content {
            /*similiar with small-text class, font-size's different*/
            font-weight: 300;
            color: grey;
            line-height: 1;
            font-size: 12px;
        }

    .pagination a {
      color: black;
      padding: 8px 12px;
      text-decoration: none;
      transition: background-color .3s;
      border-radius: 50%;
      font-size: 14px;
    }

    .pagination a.active {
      font-weight: 700;
    }

    .pagination a:hover:not(.active) {background-color: #ddd;}

    .pagination-container {
        text-align: center;
    }

    p.pagination-info {
        margin-top: 10px;
        font-weight: 300;
        color: #8F8C8C;
        letter-spacing: 2px;
    }

    .horizontalscroll{
        display: flex;
        flex-wrap: nowrap; /* [1] */
        overflow-x: auto;
    }
    .card{
        flex-shrink: 0;
    }
    .horizontalscroll::-webkit-scrollbar {display: none;}
    .horizontalscroll:hover{ -webkit-overflow-scrolling:touch;}
</style>


<body ng-controller="drdController">
    <!-- HIGHLIGHT SECTION -->
    <section class="panel highlight-container container" id="highlight-contact">

        <h4><a href="/contact" class="btn btn-logo-header"><i class="icon-users4"></i></a> @ViewBag.Title</h4>

        <div class="horizontalscroll">
            <!-- CARD 1 -->
            <div class="col-md-3 card" ng-click="getDefaultPersonalContact()">
                <div class="highlight-card personal">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-4">
                                <div class="card-image"><img src="~/Images/Member/icon_female.png" /></div>
                            </div>
                            <div class="col-xs-8">
                                <div class="card-title">
                                    <p>Personal</p>
                                </div>
                                <div class="card-content">
                                    <p>{{totalPersonalContact}} Contacts</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end of CARD 1 -->
            <!-- CARD 2 -->
            <div class="col-md-3 card" ng-repeat="y in companies" ng-if="isMemberOfACompany()" ng-click="getDefaultContactFromCompany(y.Id)" ng-init="$last && equalHeight()">
                <div class="highlight-card {{y.Id}}">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-4">
                                <div class="card-image"><img src="~/Images/Member/icon_female.png" /></div>
                            </div>
                            <div class="col-xs-8">
                                <div class="card-title">
                                    <p>{{ y.Name }}</p>
                                </div>
                                <div class="card-content">
                                    <p>{{ y.TotalMember }} Contacts</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end of CARD 2 -->
        </div>
    </section>

    <!-- CONTACT-LIST SECTION -->
    <section class="panel" id="contact-list">
        <!-- Page container -->
        <div class="page-container invitation-list">
            <!-- Page content -->

            <div class="panel-default page-content">

                <!-- Main content -->
                <div class="content-wrapper">
                    <!-- Page header -->
                    <div class="page-header page-header-default">
                        <div class="page-header-content">
                            <div class="page-title">
                                <h4>
                                    <i ng-show="contactList.CompanyName == 'Personal'" class="icon-user position-left"></i>
                                    <i ng-show="contactList.CompanyName != 'Personal'" class="icon-library2 position-left"></i>
                                    {{contactList.CompanyName}}
                                </h4>
                                <br />
                                <div class="row">
                                    <div class="col-sm-12 col-md-4 ">

                                        <div class="input-group">
                                            <input type="text" class="form-control" ng-model="searchKey" placeholder="Search" style="height:50px" ng-keyup="$event.keyCode ==  13 && getContact(searchKey, page, row)">
                                            <span class="input-group-btn">
                                                <button id="my-button" class="btn btn-drd-1 btn-large" type="button" data-style="slide-down" data-spinner-color="#333" ng-click="getContact(searchKey, page, row)" style="background-color:#075685; color:white; width:50px;height:50px">
                                                    <span class="ladda-label"><i class="icon-search4"></i></span><span class="ladda-spinner"></span>
                                                    <div class="ladda-progress" style="width: 0px;"></div>
                                                </button>
                                            </span>
                                        </div>

                                    </div>
                                    <div ng-show="showAddButton" class="col-md-6">
                                        <div class="">
                                            <button class="btn btn-drd-1 btn-large" data-toggle="tooltip" title="create new workflow" ng-click="popupAddContact()">
                                                <i class="icon-plus2"></i> Add
                                            </button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <!-- /page header -->
                    <!-- Content area -->

                    <div class="content" style="display:none">
                        <!-- Contextual classes -->
                        <!-- LIST -->
                        <div calss="row">


                            <div class="panel panel-flat no-border">

                                <div class="table-responsive" ng-show="isView">

                                    <table class="table-xs">
                                        <thead>
                                            <tr style="background-color: white; color: black; font-weight:700; border-bottom:1px solid black;">
                                                <td>Nama</td>
                                                <td>Phone</td>
                                                <td>Email</td>
                                                <td>Action</td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="x in contactList.Items">
                                                <td>
                                                    <img ng-src={{(x.Picture==null?"/Images/Member/user.png":"/Images/Member/"+x.EncryptedId+"/"+x.Picture)}} height="40" width="40" style="cursor:pointer;border-radius:50%;" />
                                                    &ensp;&ensp;{{x.Name}}
                                                </td>
                                                <td>{{x.Phone}}</td>
                                                <td>{{x.Email}}</td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- PAGINATION -->
                        @*
                        ng-if="hasContact()"
                        *@

                        <div class="pagination-container">
                            <div class="pagination">
                                <a ng-show="hasBack" ng-click="back()">&laquo;</a>
                                <a href="#" class="active">{{ page }}</a>
                                <a ng-show="hasNext" ng-click="next()">&raquo;</a>
                            </div>
                            <p class="pagination-info">{{ page }} of {{ totalPage }}</p>

                        </div>
                        <!-- end of PAGINATION -->
                        <!-- /LIST -->

                    </div>
                    <!-- /content area -->
                </div>
                <!-- /main content -->
            </div>
            <!-- /page content -->
        </div>
        <!-- /page container -->

        <!-- View modal -->
        <ng-include src="'/Include/PopupAddContact'"></ng-include>
        <!-- View modal -->

    </section>



    <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap']) //, 'ui.select2'])

        myApp.controller("drdController", function ($scope, $location, $http, $filter) {

            // modal addcontact
            $scope.contactMatched = null;
            $scope.criteria = null;
            $scope.showAddButton = true;
            // modal addcontact

            $scope.companies = [];
            $scope.currentCompanyId = "";
            $scope.totalPersonalContact = 0;
            $scope.contactList = { Count: 0, CompanyName: "", Items: [], Type: "" }
            $scope.hasPersonalContactAccessed = false;
            $scope.isView = false;

            // PAGINATION
            $scope.paging = [];
            $scope.searchKey = "";
            $scope.page = 1;
            $scope.row = 20;
            $scope.totalPage = 0;
            $scope.hasNext = false;
            $scope.hasBack = false;

            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            angular.element(document).ready(function () {
                $(".content").show();
                $scope.getCompaniesData();
                if ($scope.contactList.Count == 0)
                    $scope.getDefaultPersonalContact();
            });
            var maxHeight = null;
            $scope.equalHeight = function () {
                $(".highlight-card").each( function() {
                    var thisHeight = $(this).height();
                    if (maxHeight == null || thisHeight > maxHeight) maxHeight = thisHeight;
                });
                $(".highlight-card").height(maxHeight);
            }

            /*--------------------------------------------------------------
            GET DATA THAT CONTACT PAGE NEED
            --------------------------------------------------------------*/
            // get all cards data (Personal and Companies data)
            $scope.getCompaniesData = function () {
                $http.get('@Url.Action("GetCompaniesData", "Contact")')
                    .then(function (response) {
                        if (response.data) {
                            $scope.companies = response.data;
                        }
                });
            }

            $scope.getDefaultPersonalContact = function ()
            {
                $(".highlight-card").removeClass("light");
                $(".personal").addClass("light");
                $scope.showAddButton = true;
                $scope.searchKey = "";
                $scope.page = 1;
                $scope.getPersonalContact($scope.searchKey, $scope.page, $scope.row)
            }
            $scope.getPersonalContact = function (searchKey, page, pageSize) {
                $http.post('@Url.Action("GetPersonalContact", "Contact")', { topCriteria: searchKey, page: page, pageSize: pageSize })
                    .then(function (response) {

                        if (response.data) {
                            // init total of personal data when first calling
                            $scope.contactList.Count = response.data.Count;
                            $scope.contactList.Items = response.data.Items;
                            $scope.contactList.Type = "Personal";
                            $scope.contactList.CompanyName = "Personal";
                            $scope.currentCompanyId = "";
                            $scope.totalPersonalContact = response.data.Count;
                            if (!$scope.hasPersonalContactAccessed) {
                                $scope.contactList.Count = response.data.Count;
                            }
                            if ($scope.contactList.Count < 1) {
                                $scope.page = 0;
                            }
                            $scope.isView = true;
                            $scope.hasPersonalContactBeenAccessed = true;
                            $scope.totalPage = $scope.countTotalPage($scope.contactList.Count, $scope.row);
                        }


                });
            }

            $scope.getProductCount = function (searchKey) {
                $http.post('@Url.Action("GetInvitedLiteAllCount", "invitation")', { topCriteria: searchKey }).then(function (response) {
                    if (response.data) {

                        var jumlahData = response.data;
                        var jumlahPage = Math.ceil(jumlahData / $scope.row);
                        for (var i = 1; i <= jumlahPage; i++) {
                            $scope.paging.push(i);
                        }



                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            /*--------------------------------------------------------------
            HANDLE PAGINATION
            --------------------------------------------------------------*/

            $scope.countTotalPage = function (totalItem, size) {
                var totalPage = Math.ceil(totalItem / size);
                if ($scope.page < totalPage) {
                    $scope.hasNext = true;
                }
                if ($scope.page > 1) {
                    $scope.hasBack = true;
                }
                return totalPage;
            }

            $scope.updatePage = function (page, size) {

            }


            /*--------------------------------------------------------------
            GENERAL FUNCTION
            --------------------------------------------------------------*/
            $scope.isMemberOfACompany = function () {
                return $scope.companies.length > 0;
            }

            $scope.hasContact = function () {
                return $scope.contactList.Count > 0;
            }

            $scope.addMember = function (mid) {
                location.href = "/invitation/invitation?mid=" + mid;
            }

            $scope.getDefaultContactFromCompany = function (companyId) {
                $(".highlight-card").removeClass("light");
                $("." + companyId).addClass("light");
                $scope.showAddButton = false;

                $scope.searchKey = "";
                $scope.page = 1;
                $scope.getContactFromCompany(companyId, $scope.searchKey, $scope.page, $scope.row)
            }
            $scope.getContactFromCompany = function (companyId, searchKey, page, pageSize) {
                $scope.contactList = { Count: 0, CompanyName: "", Items: [], Type: "" }
                $scope.currentCompanyId = companyId;
                $http.post('@Url.Action("GetContactFromCompany", "Contact")', { CompanyId: companyId, topCriteria: searchKey, page: page, pageSize: pageSize })
                    .then(function (response) {
                        if (response.data) {
                            $scope.contactList.Items = response.data.Items;
                            $scope.contactList.Count = response.data.Count;
                            $scope.contactList.CompanyName = response.data.CompanyName;
                            $scope.contactList.Type = "Company";
                            // init total of personal data when first calling
                            if (!$scope.hasPersonalContactAccessed) {
                                $scope.contactList.Count = response.data.Count;
                                $scope.hasPersonalContactAccessed = true;
                            }
                            if ($scope.contactList.Count < 1) {
                                $scope.page = 0;
                            }
                            $scope.isView = true;
                            $scope.hasPersonalContactBeenAccessed = true;
                            $scope.totalPage = $scope.countTotalPage($scope.contactList.Count, $scope.row);
                        }
                    });
            }

            /*--------------------------------------------------------------
                POPUP ADDCONTACT
            --------------------------------------------------------------*/
            $scope.popupAddContact = function () {
                $scope.criteriaAdd = "";
                $scope.contactMatched = null;
                $("#modal_add_contact").modal("show");
            }

            $scope.addPersonalContact = function () {
                $http.post('@Url.Action("AddPersonalContact", "contact")', { userId: $scope.contactMatched.Id }).then(function (response) {
                    if (response.data) {
                        $scope.contactList.Items.push($scope.contactMatched);
                        $scope.contactList.Items.sort(compare);
                    }

                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            function compare(a, b) {
                // Use toUpperCase() to ignore character casing
                const bandA = a.Name.toUpperCase();
                const bandB = b.Name.toUpperCase();

                let comparison = 0;
                if (bandA > bandB) {
                    comparison = 1;
                } else if (bandA < bandB) {
                    comparison = -1;
                }
                return comparison;
            }


            $scope.GetEmailContact = function (criteria) {
                $scope.workflows = [];
                $http.post('@Url.Action("GetEmailContact", "Contact")', { email: criteria}).then(function (response) {
                    if (response.data) {
                        $scope.contactMatched = response.data;
                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }
            
            /*--------------------------------------------------------------
                END POPUP ADDCONTACT
            --------------------------------------------------------------*/

            /*--------------------------------------------------------------
            SEARCH FUNCTION
            --------------------------------------------------------------*/
            $scope.getContact = function (searchKey, page, pageSize) {
                if ($scope.contactList.Type === "Personal") {
                    page = 1;
                    $scope.page = page;
                    $scope.getPersonalContact(searchKey, page, pageSize);
                }
                else {
                    page = 1;
                    $scope.page = page;
                    $scope.getContactFromCompany($scope.currentCompanyId, searchKey, page, pageSize);
                }
            }

            $scope.next = function () {
                $scope.page = $scope.page + 1;
                if ($scope.contactList.Type == "Personal") {
                    $scope.getPersonalContact($scope.searchKey, $scope.page, $scope.row);
                }
                else if ($scope.contactList.Type == "Company"){
                    $scope.getContactFromCompany($scope.currentCompanyId, $scope.searchKey, $scope.page, $scope.row);
                }
            }
            $scope.back = function () {
                $scope.page = $scope.page - 1;
                if ($scope.contactList.Type == "Personal") {
                    $scope.getPersonalContact($scope.searchKey, $scope.page, $scope.row);
                }
                else if ($scope.contactList.Type == "Company"){
                    $scope.getContactFromCompany($scope.currentCompanyId, $scope.searchKey, $scope.page, $scope.row);
                }
            }
            /*--------------------------------------------------------------
            CONVERT JSON DATE
            --------------------------------------------------------------*/
            $scope.convertJsonDate = function (val) {
                if (val == undefined)
                    return '';
                return new Date(parseInt(val.substr(6)));
            }
        });

        $(function () {

        });
        $(document).ready(function () {

        });

    </script>

</body>