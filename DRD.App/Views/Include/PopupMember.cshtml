

@{
    Layout = null;
}

<div id="modal_select_member" class="modal fade" z-index="10000">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h6 class="modal-title">Select Member</h6>
            </div>

            <div class="input-group">
                <input type="text" ng-keyup="$event.keyCode == 13 && getMembers($parent.criteria, $parent.page, $parent.totalItemPerPage)" class="form-control" ng-model="$parent.criteria" placeholder="Enter nomor/name/email/phone" />

                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" ng-click="getMembers($parent.criteria, $parent.page, $parent.totalItemPerPage)">Search</button>
                </span>

                <span class="input-group-btn" style="width:75px">
                    <select ng-model="$parent.page" class="form-control" ng-change="changePageMember($parent.criteria, $parent.page, $parent.totalItemPerPage)">
                        <option value="{{x.value}}" ng-repeat="x in paging">{{x.text}}</option>
                    </select>
                </span>
            </div>

            <div style="max-height:450px" class="table-responsive">
                <table class="table-xxs table-borderless table-hover datatable-highlight dataTable no-footer" style="font-size:small;width:100%">

                    <tbody>
                        <tr ng-repeat="x in $parent.members" style="cursor:pointer;height:25px;vertical-align:top" data-dismiss="modal" ng-click="setMember($index);">
                            <td width="15px"><i class="icon-user" /></td>
                            <td>{{x.Name+" - "+x.Email}}</td>
                        </tr>
                        <tr ng-show="$parent.members.length == 0" style="height:40px;vertical-align:middle;text-align:center" data-dismiss="modal">
                            <td>You have no available contact</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

