
@{
    Layout = null;
}

<div id="modal_select_activity" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h6 class="modal-title">Define Activity</h6>
            </div>

            <div class="modal-body">
                <div class="">
                    <label class="control-label">Name</label>
                    <input type="text" class="form-control" ng-model="$parent.activity.Name" maxlength="100" />

                </div>

                <div class="">
                    <label class="control-label">Info</label><br />
                    <textarea class="control-label" ng-model="$parent.activity.Info" rows="3" style="resize: none; overflow-y: hidden; opacity: 0.8; height: 100px;width:100%" @*ng-required="wizarno=='product'"*@></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="setActivity();">Save changes</button>
            </div>

        </div>
    </div>
</div>

