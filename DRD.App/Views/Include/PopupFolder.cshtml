
@{
    Layout = null;
}

<div id="modal_folder" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h6 class="modal-title">Define Folder</h6>
            </div>

            <div class="modal-body">
                <div class="">
                    <label class="control-label">Name</label>
                    <input type="text" class="form-control" id="folderName" ng-model="folderName" maxlength="50" />

                </div>

                <div class="">
                    <label class="control-label">Description</label><br />
                    <input type="text" class="form-control" id="folderDescr" ng-model="folderDescr" maxlength="250" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="saveFolder();">Save changes</button>
            </div>

        </div>
    </div>
</div>

