
@{
    Layout = null;
}

<div id="modal_select_subscription" class="modal fade" z-index="10000">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h6 class="modal-title">Select Subscription</h6>
            </div>

            <div style="max-height:450px" class="table-responsive">
                @*class="modal-body"*@
                <table class="table-xxs table-borderless table-hover datatable-highlight dataTable no-footer" style="font-size:small;width:100%">
                    <tbody>
                        <tr ng-click="do_start($index);" data-dismiss="modal" style="cursor:pointer;height:40px;" ng-repeat="x in SubscriptionList">
                            <td width="15px"><i class="icon-box" /></td>
                            <td>{{x.CompanyName}} - {{x.PackageName}}</td>
                        </tr>
                        <tr ng-show="SubscriptionList.length == 0" style="height:40px;vertical-align:middle;text-align:center" data-dismiss="modal">
                            <td>You have no available subscription plan</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

