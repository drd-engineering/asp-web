
@{
    Layout = null;
}

<style>
    .container {
        width: inherit;
    }

    .table-responsive {
        min-height:450px;
    }
</style>

<div id="modal_add_document" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h6 class="modal-title">Add Document</h6>
            </div>

            <div class="table-responsive">
                <form name="myForm" class="form-horizontal" autocomplete="off">

                    <div class="container" ng-show="wizarno=='product'">
                        <fieldset>
                            <div class="row">
                                <div class="col-md-8">
                                    <label class="control-label">Title</label>
                                    <input type="text" class="form-control" ng-model="$parent.document.Title" ng-required="wizarno=='product'" maxlength="100" />
                                </div>
                                <div class="col-md-2">
                                    <label class="control-label">Version</label>
                                    <input type="text" class="form-control" ng-model="$parent.document.Version" ng-required="wizarno=='product'" maxlength="20" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10">
                                    <label class="control-label">Description</label>
                                    <textarea class="control-label" ng-model="$parent.document.Description" rows="3" style="resize: none; opacity: 0.8; height: 150px;width:100%" ng-required="wizarno=='product'"></textarea>
                                </div>

                            </div>
                            <div class="row">

                                <div class="col-md-7">
                                    <label class="control-label">Document File</label>
                                    <div>
                                        <div class="image-wraper">

                                            <span style="position:absolute;padding:5px;font-size:smaller"
                                                  ng-model="$parent.progressUploadFile">{{$parent.docFileName}}<br />{{$parent.progressValueUploadFile}}</span>

                                            <img ng-src="/Images/filetype/{{fileTypeImage}}" class="image-content"
                                                 ngf-drop="uploadDocFile(0,$file, $invalidFiles)"
                                                 ngf-select="uploadDocFile(0,$file, $invalidFiles)"
                                                 ngf-max-size="1000MB" style="object-fit:fill" />
                                        </div>
                                        <label class="control-label" ng-show="$parent.document.Id!=0 || isUpload">
                                            Original File Name:<br />
                                            <b><a ng-click="annoDocument()">{{$parent.document.FileNameOri}}</a></b>
                                        </label><br />
                                                <span style="font-size:xx-small">File Size (Bytes) : {{$parent.document.FileSize | $parent.number}}</span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label class="control-label">Expiry (days)</label>
                                            <input type="text" class="form-control input-xs" ng-model="$parent.document.ExpiryDay" ng-required="wizarno=='product'" maxlength="3" ng-only-number />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="control-label">Max Print</label>
                                            <input type="text" class="form-control input-xs" ng-model="$parent.document.MaxPrint" ng-required="wizarno=='product'" maxlength="3" ng-only-number />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="control-label">Max Download</label>
                                            <input type="text" class="form-control input-xs" ng-model="$parent.document.MaxDownload" ng-required="wizarno=='product'" maxlength="3" ng-only-number />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="text-right">
                                    <span class="input-group-btn">
                                        <button class="btn bg-slate-700 pull-right btn-ladda btn-submit" data-style="slide-down" data-spinner-color="#333" ng-click="addDocument()" style="width:120px">
                                            <span class="ladda-label">Submit</span><span class="ladda-spinner"></span>
                                            <div class="ladda-progress" style="width: 0px;"></div>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>


                    </div>
                </form>

            </div>

                

            </div>
        </div>
</div>

