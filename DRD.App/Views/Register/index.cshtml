<title>DRD - @ViewBag.Title</title>
<body class="login-container" ng-app="drdApp" style="margin-top:-50px;">
    <!-- Page container -->
    <div class="page-container" ng-controller="drdController">
        <!-- Page content -->
        <div class="page-content">
            <!-- Main content -->
            <div class="content-wrapper">
                <!-- Horizontal form options -->
                <!-- Content area -->
                <div class="content" style="display:none;">
                    <!-- Basic layout-->
                    <div class="panel panel-body login-form" style="width:800px;">
                        <div ng-click="backToHome()" style="border:solid;border-color:cornflowerblue;border-width:1px;padding:10px;min-height:200px;width:100%;text-align:right">
                            <img src="../../Images/back_reg2.jpg" style="max-height:100%;max-width:100%" />
                        </div>
                        <div class="panel-body">
                            <!--MEMBER DATA-->
                            <form name="myForm" class="form-horizontal">
                                <div ng-show="wizarno=='product'">
                                    <fieldset>
                                        <div class="col-md-12">

                                            <div class="row form-component">
                                                <div class="col-md-12">
                                                    <label class="control-label">Name</label>
                                                    <input type="text" class="form-control" ng-model="model.Name" ng-required="wizarno=='product'" maxlength="50" />
                                                </div>
                                            </div>

                                            <div class="row form-component">
                                                <div class="col-md-4">
                                                    <label class="control-label">Phone</label>
                                                    <input type="text" class="form-control" ng-model="model.Phone" ng-required="wizarno=='product'"
                                                           maxlength="20" ng-only-number />
                                                </div>
                                                <div class="col-md-8">
                                                    <label class="control-label">Email</label>
                                                    <input type="email" class="form-control" ng-change="checkAvailability(model.Email)"
                                                           ng-model="model.Email" ng-required="wizarno=='product'" maxlength="50" ng-readonly="model.Id!=0" />
                                                    <div style="color:red;font-size:10px;align-self:end">{{emailStatus}}</div>
                                                </div>

                                            </div>

                                            <div class="row form-component">
                                                <div class="col-md-6">
                                                    <label class="control-label">
                                                        Company (optional)
                                                        <small class="display-block text-light">select from registered company, to make new company please contact us</small>
                                                    </label>
                                                    <input type="text" id="autocomplete-company" class="form-control input-field-darker autocomplete-suggestion autocomplete-selected"
                                                           placeholder="not selected" ng-model="model.CompanyName" maxlength="50" />
                                                </div>
                                            </div>

                                        </div>
                                    </fieldset>
                                    <div class="col-md-12">
                                        <div class="text-right">
                                            <span class="input-group-btn">
                                                <button class="btn bg-slate-700 pull-right btn-submit mg-left-10" data-style="slide-down"
                                                        data-spinner-color="#333" ng-click="validateForm()" style="width:120px">
                                                    <span class="ladda-label">Submit</span><span class="ladda-spinner"></span>
                                                    <div class="ladda-progress" style="width: 0px;"></div>
                                                </button>

                                                <button class="btn bg-slate-700 pull-right btn-cancel mg-left-10" data-style="slide-down"
                                                        data-spinner-color="#333" ng-click="backToHome()" style="width:120px">
                                                    <span class="ladda-label">Back</span><span class="ladda-spinner"></span>
                                                    <div class="ladda-progress" style="width: 0px;"></div>
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!--/MEMBER DATA-->
                            <!--CONFIRMATION THANK YOU-->
                            <div ng-show="wizarno=='success'">
                                <div class="col-md-12">
                                    <p>
                                        You have successfully registered your account. Please check your email to get your password to be able to <a ng-click="backToHome()">log in</a>.<br />
                                         registration is successful.
                                    </p><br /><br />

                                    <p>if you want to register a new company to become our business partner. We’ll be glad if you contact us <a ng-href="https://drdaccess.com/#contact-section">here</a>.</p>
                                </div>
                            </div>
                            <!--/CONFIRMATION THANK YOU-->
                            <!-- View member modal -->
                            <ng-include src="'/Include/PopupTnC'"></ng-include>
                            <!-- View member modal -->
                        </div>
                    </div>
                    <!-- /basic layout -->
                </div>
                <!-- /vertical form options -->
            </div>
            <!-- /Main content -->
        </div>
        <!-- /Page content -->
    </div>
    <!-- /Page container -->

    <script type="text/javascript">
        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap', 'ngOnlyNumberApp', 'ngFileUpload'])
        myApp.controller("drdController", function ($scope, Upload, $http, $filter) {
            ////////////////////////////  INITIATE DATA  ////////////////////////////
            $scope.model = {};
            $scope.wizarno = 'product';
            $scope.model.Id = 0;
            $scope.model.Email = "";
            $scope.model.Image1 = "no_picture.png";
            $scope.model.Image2 = "no_picture.png";
            $scope.model.ImageCard = "no_picture.png";
            $scope.companyAll = [];

            $scope.subscriptionId = "";
            $scope.userNumber = "";
            $scope.aggrement = false;
            function initValues() {
            }
            angular.element(document).ready(function () {
                $scope.model.Image1 = "no_picture.png";
                $scope.model.Image2 = "no_picture.png";
                $scope.model.ImageCard = "no_picture.png";
                $scope.getAvailableCompanies();
                $(".content").show();
            });
            $scope.initData = function () {

            }
            ////////////////////////////  EMAIL CHECKER ////////////////////////////
            $scope.typingTimer;
            $scope.doneTypingInterval = 500;
            $scope.checkAvailability = function (emailUser) {
                clearTimeout($scope.typingTimer);
                $scope.typingTimer = setTimeout(function () {
                    $http.get('@Url.Action("CheckIsEmailAvailable", "Register")?email=' + emailUser).then(function (response)
                    {
                        if (response.data) {
                            document.querySelector('.btn-submit').disabled = false;
                            $scope.emailStatus = "";
                        }
                        else {
                            document.querySelector('.btn-submit').disabled = true;
                            $scope.emailStatus = "This email has already used";
                        }
                    });
                }, $scope.doneTypingInterval);
            }
            ////////////////////////////  COMPANY SELECTION  ////////////////////////////
            $scope.autocompleteCompany = function () {
                $('#autocomplete-company').autocomplete({
                    lookup: $scope.companyAll ,
                    onSelect: function(suggestion){
                        $scope.model.CompanyId = suggestion.data;
                        $scope.model.CompanyName = suggestion.value;
                    }
                });
            }
            $scope.getAvailableCompanies = function () {
                $http.get('@Url.Action("GetCompanies", "Register")')
                .then(function (response) {
                    if (response.data) {
                        $scope.companyAll = $.map(response.data, function (dataItem) {
                            return { value: dataItem.Name, data: dataItem.Id };
                        });
                        $scope.autocompleteCompany();
                    }
                });
            }
            ////////////////////////////  SAVE USER REGISTRATION  ////////////////////////////
            $scope.saveUser = function () {
                var btn = Ladda.create( document.querySelector( '.btn-submit' ) );
                btn.start();
                $http.post('@Url.Action("Save", "Register")',
                    {
                        Register: {
                            Id: $scope.model.Id,
                            Name: $scope.model.Name,
                            Phone: $scope.model.Phone,
                            Email: $scope.model.Email,
                            CompanyId: $scope.model.CompanyId,
                        }
                    }).then(function (response) {
                        btn.stop();
                        if (response.data) {
                            console.log(response.data);
                            var result = response.data;
                            if (result.Id == "DBLEMAIL") {
                                showInfo("User email already used by other.");
                                return;
                            }
                            if (result.Id == "ERROR") {
                                showInfo("There is some error please try again.")
                                return;
                            }
                            $scope.wizarno = 'success';
                        }
                    }, function (response) {
                        //error handle\
                        btn.stop();
                        var x = 0;
                    });
            }
            $scope.setAggreement = function (value) {
                $scope.aggrement = value;
            }
            $scope.getAggreement = function () {
                return $scope.aggrement;
            }
            $scope.validateForm = function () {
                if (!$scope.isValidForm($scope.myForm))
                    return;
                $scope.popupTnC();
            }
            $scope.isValidForm = function (theForm) {
                var isvalid = theForm.$valid;
                return isvalid;
            };
            $scope.popupTnC = function () {
                $("#modal_tnc").modal("show");
            }
            $scope.updateProduct = function () {
                if (!$scope.getAggreement()) {
                    alert("please tick the aggrement.");
                    return;
                }
                $("#modal_tnc").modal("hide");
                $scope.saveUser();
            }
            ////////////////////////////  ADDITIONAL  ////////////////////////////
            $scope.scrollingPage = function (id) {
                $('html, body').animate({
                    scrollTop: $(id).offset().top
                }, 200);
            }
            $scope.backToHome = function () {
                location.href = "/login";
            }
        });
        $(function () {
        });
        $(document).ready(function () {
        })
    </script>
</body>