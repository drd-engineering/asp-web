@model DRD.Models.View.Layout
@{
    ViewBag.Title = "Profile";
}
@section Scripts
{
    <script src="/assets/js/pages/components_buttons.js" type="text/javascript"></script>

    <script src="/assets/vendors/file-upload/ng-file-upload-shim.min.js"></script>
    <script src="/assets/vendors/file-upload/ng-file-upload.min.js"></script>
    <script src="/assets/vendors/ng_only_number.js"></script>

    <script src="/assets/vendors/angular-1.5.5/angular-sanitize.min.js"></script>
    <script src="/assets/vendors/bootstrap-switch/bootstrap-switch.js"></script>
    <script src="/assets/vendors/bootstrap-datepicker-1.6.4-dist/js/bootstrap-datepicker.min.js"></script>

    <script type="text/javascript" src="/assets/js/plugins/forms/styling/uniform.min.js"></script>
    <script type="text/javascript" src="/assets/js/plugins/forms/styling/switchery.min.js"></script>
    <script type="text/javascript" src="/assets/js/plugins/forms/styling/switch.min.js"></script>

    <script src="/assets/js/signature_pad.min.js"></script>
    <script src="/assets/js/signature.js"></script>
    <script src="~/Scripts/xpublic.js"></script>
}
@section Styles
{
    <link href="/assets/vendors/bootstrap-switch/bootstrap3/bootstrap-switch.css" rel="stylesheet" type="text/css" />
    <link id="bsdp-css" href="/assets/vendors/bootstrap-datepicker-1.6.4-dist/css/bootstrap-datepicker3.min.css" rel="stylesheet">
    <link href="~/assets/css/pages/profile.css" rel="stylesheet" type="text/css" />
}
<body>
    <h4>
        <a class="btn" href="/profile" style="border-radius:15px;text-align:center;padding:5px;margin-left:20px;font-weight:800;background-color:#5D90AE;color:white;"><i class="icon-user"></i></a> @ViewBag.Title
    </h4>
    <!-- Page container -->
    <div class="page-container" ng-controller="drdController">
        <!-- Page content -->
        <div class="page-content">


            <!-- Main content -->
            <div class="content-wrapper">
                <!-- Horizontal form options -->
                <!-- Content area -->
                <div class="content" id="content" style="display:none;">

                    <!-- Basic layout-->
                    <div class="panel panel-flat no-border">
                        <div class="panel-body">

                            <!--USER DATA-->

                            <form name="userProfileForm" class="form-horizontal" autocomplete="off" id="userProfileForm">

                                <div ng-show="wizarno=='product'">
                                    <fieldset>
                                        <div class="row flexible-row">
                                            <div class="col-md-3 vertically-center">
                                                <div class="image-wrapper">
                                                    <img ng-src="/Images/Member/{{model.ProfileImageFileName}}" class="image-content"
                                                         ngf-drop="uploadFiles(0,$file, $invalidFiles)"
                                                         ngf-select="uploadFiles(0,$file, $invalidFiles)"
                                                         ngf-pattern="'image/*'"
                                                         accept="image/*"
                                                         ngf-max-height="1000" ngf-max-size="1MB" style="object-fit:fill" />
                                                </div>
                                            </div>
                                            <div class="col-md-9">
                                                <div class="row input-group">
                                                    <div class="col-md-10">
                                                        <label class="control-label">Name</label>
                                                        <input type="text" class="form-control" ng-model="model.Name" ng-required="wizarno=='product'" maxlength="50" ng-readonly="model.Id!=0" />
                                                    </div>
                                                </div>

                                                <div class="row input-group">
                                                    <div class="col-md-3">
                                                        <label class="control-label">Phone</label>
                                                        <input type="text" class="form-control" ng-model="model.Phone" ng-required="wizarno=='product'" maxlength="20" ng-only-number ng-readonly="model.Id!=0" />
                                                    </div>
                                                    <div class="col-md-7">
                                                        <label class="control-label">Email</label>
                                                        <input type="email" class="form-control" ng-model="model.Email" ng-required="wizarno=='product'" maxlength="50" ng-readonly="model.Id!=0" />
                                                    </div>

                                                </div>
                                                <div class="row input-group">
                                                    <div class="col-md-10">
                                                        <label class="control-label">ID No (KTP)</label>
                                                        <input type="text" class="form-control" ng-model="model.OfficialIdNo" ng-required="wizarno=='product'" maxlength="50" ng-only-number />
                                                    </div>

                                                </div>

                                            </div>

                                        </div>
                                        <hr />

                                        <h4>Identity</h4>
                                        <div class="row input-group" ng-show="!isLoading">

                                            <div class="col-md-3">
                                                <label class="control-label">KTP</label>
                                                <div class="image-wrapper">
                                                    <img ng-src="/Images/Member/{{model.KTPImageFileName}}" class="image-content"
                                                         ngf-drop="uploadFiles(4,$file, $invalidFiles)"
                                                         ngf-select="uploadFiles(4,$file, $invalidFiles)"
                                                         ngf-pattern="'image/*'"
                                                         accept="image/*"
                                                         ngf-max-height="1000" ngf-max-size="1MB" style="object-fit:fill" />
                                                </div>
                                            </div>

                                            <div class="col-md-3">
                                                <label class="control-label">KTP Pose</label>
                                                <div class="image-wrapper">

                                                    <img ng-src="/Images/Member/{{model.KTPVerificationImageFileName}}" class="image-content"
                                                         ngf-drop="uploadFiles(5,$file, $invalidFiles)"
                                                         ngf-select="uploadFiles(5,$file, $invalidFiles)"
                                                         ngf-pattern="'image/*'"
                                                         accept="image/*"
                                                         ngf-max-height="1000" ngf-max-size="1MB" style="object-fit:fill" />

                                                </div>
                                            </div>

                                        </div>
                                        <br />
                                        <div class="row input-group" ng-show="!isLoading">
                                            <div class="col-md-3">
                                                <!-- Input Header -->
                                                <label class="control-label">Signature</label>
                                                <span class="pull-right"><a ng-click="signaturePad(0)"><i class="icon-pencil7"></i></a></span>

                                                <div class="image-wrapper">
                                                    <img ng-src="/Images/Member/{{model.SignatureImageFileName}}" class="image-content"
                                                         ngf-drop="uploadFiles(1,$file, $invalidFiles)"
                                                         ngf-select="uploadFiles(1,$file, $invalidFiles)"
                                                         ngf-pattern="'image/*'"
                                                         accept="image/*"
                                                         ngf-max-height="1000" ngf-max-size="1MB" style="object-fit:fill"
                                                         id="signaturepad" />
                                                </div>

                                            </div>

                                            <div class="col-md-3">
                                                <!-- Input Header -->
                                                <label class="control-label">Initial</label>
                                                <span class="pull-right"><a ng-click="signaturePad(1)"><i class="icon-pencil7"></i></a></span>
                                                <div class="image-wrapper">
                                                    <img ng-src="/Images/Member/{{model.InitialImageFileName}}" class="image-content"
                                                         ngf-drop="uploadFiles(2,$file, $invalidFiles)"
                                                         ngf-select="uploadFiles(2,$file, $invalidFiles)"
                                                         ngf-pattern="'image/*'"
                                                         accept="image/*"
                                                         ngf-max-height="1000" ngf-max-size="1MB" style="object-fit:fill"
                                                         id="initialpad" />
                                                </div>

                                            </div>
                                            <div class="col-md-3">
                                                <!-- Input Header -->
                                                <label class="control-label">Private Stamp</label>
                                                <div class="image-wrapper">

                                                    <img ng-src="/Images/Member/{{model.StampImageFileName}}" class="image-content"
                                                         ngf-drop="uploadFiles(3,$file, $invalidFiles)"
                                                         ngf-select="uploadFiles(3,$file, $invalidFiles)"
                                                         ngf-pattern="'image/*'"
                                                         accept="image/*"
                                                         ngf-max-height="1000" ngf-max-size="1MB" style="object-fit:fill" />
                                                </div>
                                            </div>
                                        </div>

                                    </fieldset>

                                    <hr />
                                    <div class="col-md-12">

                                        <div class="col-md-12">
                                            <div class="text-right">
                                                <span class="input-group-btn">
                                                    <button class="btn bg-slate-700 pull-right btn-ladda btn-submit" data-style="slide-down" data-spinner-color="#333" ng-click="updateUserProfile()">
                                                        <span class="ladda-label">Submit</span><span class="ladda-spinner"></span>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </form>
                            <!--/MEMBER DATA-->
                            <!--CONFIRMATION THANK YOU-->
                            <div ng-show="wizarno =='success'">
                                <div class="col-md-12">
                                    <div class="alert alert-success alert-styled-left">
                                        <p ng-bind-html="infoSuccess" compile-template></p>
                                    </div>
                                </div>
                            </div>
                            <ng-include src="'/Include/PopupSignature'" onload="finishLoading()"></ng-include>
                            <!--/CONFIRMATION THANK YOU-->
                        </div>
                    </div>
                    <!-- /basic layout -->
                </div>
                <!-- /vertical form options -->
            </div>
            <!-- /Main content -->
        </div>
        <!-- /Page content -->
    </div>
    <!-- /Page container -->

    <script type="text/javascript">
        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap', 'ngSanitize', 'ngFileUpload', 'ngOnlyNumberApp', 'signature'])
        myApp.directive('compileTemplate', function ($compile, $parse) {
            return {
                link: function (scope, element, attr) {
                    var parsed = $parse(attr.ngBindHtml);
                    function getStringValue() { return (parsed(scope) || '').toString(); }

                    //Recompile if the template changes
                    scope.$watch(getStringValue, function () {
                        $compile(element, null, -9999)(scope);  //The -9999 makes it skip directives so that we do not recompile ourselves
                    });
                }
            }
        })
        myApp.directive('onFinishRender', function ($timeout) {
            return {
                restrict: 'A',
                link: function (scope, element, attr) {
                    if (scope.$last === true) {
                        $timeout(function () {
                            scope.$emit('ngRepeatBindRoutesFinished');
                        });
                    }
                }
            }
        });
        myApp.controller("drdController", function ($scope, $sce, Upload, $location, $http, $filter) {
            ////////////  INITIATE DATA  /////////////////
            $scope.isLoading = true;
            $scope.model = {};
            $scope.wizarno = 'product';
            $scope.model.Id = 0;
            $scope.model.EncryptedId = "";
            $scope.model.LoginId = null;
            $scope.noImage="no_picture.png";
            $scope.model.ProfileImageFileName=$scope.noImage;
            $scope.model.SignatureImageFileName=$scope.noImage;
            $scope.model.InitialImageFileName=$scope.noImage;
            $scope.model.StampImageFileName=$scope.noImage;
            $scope.model.KTPImageFileName=$scope.noImage;
            $scope.model.KTPVerificationImageFileName = $scope.noImage;
            $scope.model.OfficialIdNo = null;
            $scope.model.IsActive=true;
            $scope.isUploadImage0=false;
            $scope.infoSuccess="Data saved successfully.";
            var signatureNo=0; // ?
            $scope.$on('ngRepeatBindRoutesFinished', function (ngRepeatFinishedEvent) {
                $(".control-primary").uniform({
                    radioClass: 'choice',
                    wrapperClass: 'border-primary-600 text-primary-800'
                });
            });
            angular.element(document).ready(function () {
                $scope.getUserProfile();
                $('#content').show();

            });
            $scope.initData = function () {
            }
            $scope.finishLoading = function () { }
            ////////////  SAVE SIGN DRAW  /////////////////
            $scope.signatureDone = function(data) {
                $("#modal_signature_pad").modal("hide");
                if (signatureNo==0)
                    $("#signaturepad").attr("src", data.dataUrl);
                else
                    $("#initialpad").attr("src", data.dataUrl);
                // Get the form
                var form = document.getElementById("userProfileForm");

                var ImageURL = data.dataUrl;
                // Split the base64 string in data and contentType
                var block = ImageURL.split(";");
                // Get the content type
                var contentType = block[0].split(":")[1];// In this case "image/gif"
                // get the real base64 content of the file
                var realData = block[1].split(",")[1];// In this case "iVBORw0KGg...."

                // Convert to blob
                var blob = b64toBlob(realData, contentType);

                // Create a FormData and append the file
                var fd = new FormData(form);
                fd.append("MyImages", blob);

                // Submit Form and upload file
                $.ajax({
                    url:"/profile/upload?idx=0",
                    data: fd, // the formData function is available in almost all new browsers.
                    type:"POST",
                    contentType:false,
                    processData:false,
                    cache:false,
                    dataType:"json", // Change this according to your response from the server.
                    error:function(err){
                        showInfo("Error upload data signature/initial.");
                    },
                    success:function(data){
                        if (signatureNo==0){
                            $scope.model.SignatureImageFileName = "temp/" + data.Filename;
                        }else if (signatureNo==1){
                            $scope.model.InitialImageFileName = "temp/" + data.Filename;
                        }
                    },
                    complete: function (data) {
                        //alert('complete');
                    }
                });
            }
            function b64toBlob(b64Data, contentType, sliceSize) {
                contentType = contentType || '';
                sliceSize = sliceSize || 512;

                var byteCharacters = atob(b64Data);
                var byteArrays = [];

                for (var offset = 0; offset < byteCharacters.length; offset += sliceSize) {
                    var slice = byteCharacters.slice(offset, offset + sliceSize);

                    var byteNumbers = new Array(slice.length);
                    for (var i = 0; i < slice.length; i++) {
                        byteNumbers[i] = slice.charCodeAt(i);
                    }

                    var byteArray = new Uint8Array(byteNumbers);

                    byteArrays.push(byteArray);
                }

                var blob = new Blob(byteArrays, {type: contentType});
                return blob;
            }
            ////////////  GET USER PROFILE  /////////////////
            $scope.getUserProfile = function () {
                $http.get('@Url.Action("GetProfileUser", "Profile")').then(function (response)
                {
                    if (response.data) {
                        var result = response.data;
                        // do mapping values
                        $scope.model = response.data;
                        // handle empty image
                        $scope.isUploadImage0 = (result.ProfileImageFileName == null) ? false : true;
                        $scope.model.ProfileImageFileName = (result.ProfileImageFileName == null) ? $scope.noImage : result.EncryptedId + "/" + result.ProfileImageFileName;
                        $scope.model.SignatureImageFileName = (result.SignatureImageFileName == null) ? $scope.noImage : result.EncryptedId + "/" + result.SignatureImageFileName;
                        $scope.model.InitialImageFileName = (result.InitialImageFileName == null) ? $scope.noImage : result.EncryptedId + "/" + result.InitialImageFileName;
                        $scope.model.StampImageFileName = (result.StampImageFileName == null) ? $scope.noImage : result.EncryptedId + "/" + result.StampImageFileName;
                        $scope.model.KTPImageFileName = (result.KTPImageFileName == null) ? $scope.noImage : result.EncryptedId + "/" + result.KTPImageFileName;
                        $scope.model.KTPVerificationImageFileName = (result.KTPVerificationImageFileName == null) ? $scope.noImage : result.EncryptedId + "/" + result.KTPVerificationImageFileName;
                        $scope.isLoading = false;
                        console.log($scope.model);
                    }
                    $('#checkbox1').bootstrapSwitch.defaults.size = 'mini';
                })
            }
            $scope.typeChange = function (ini, idx) {
                alert(idx);
            }

            $scope.signaturePad = function (idx) {
                signatureNo=idx;
                $("#modal_signature_pad").modal("show");
            }
            ////////////  UPLOAD IMAGE FILE  /////////////////
            $scope.uploadFiles = function (idx, file, errFiles) {
                $scope.f = file;
                $scope.errFile = errFiles && errFiles[0];
                if (file) {
                    file.upload = Upload.upload({
                        url: '/profile/upload?idx='+idx,
                        data: { MyImages: file }
                    });

                    file.upload.then(function (response) {
                        file.result = response.data;
                        if (idx==0){
                            $scope.model.ProfileImageFileName = "temp/" + file.result.Filename;
                            $scope.isUploadImage0 = true;
                        } else if (idx==1){
                            $scope.model.SignatureImageFileName = "temp/" + file.result.Filename;
                        } else if (idx==2){
                            $scope.model.InitialImageFileName = "temp/" + file.result.Filename;
                        } else if (idx==3){
                            $scope.model.StampImageFileName = "temp/" + file.result.Filename;
                        } else if (idx==4){
                            $scope.model.KTPImageFileName = "temp/" + file.result.Filename;
                        } else if (idx==5){
                            $scope.model.KTPVerificationImageFileName = "temp/" + file.result.Filename;
                        }

                    }, function (response) {
                        if (response.status > 0)
                            $scope.errorMsg = response.status + ': ' + response.data;
                    }, function (evt) {
                        file.progress = Math.min(100, parseInt(100.0 * evt.loaded / evt.total));
                    });
                } else if ($scope.errFile != null) {
                    showInfo("Error upload file : " + $scope.errFile.$error + " (" + $scope.errFile.$errorParam + ")");
                }
            }
            ////////////  UPDATE USER PROFILE  /////////////////
            $scope.updateUserProfile = function () {
                if (!$scope.isValidForm($scope.userProfileForm))
                    return;
                if ($scope.isUploadImage0 == false) {
                    showInfo("Pas photo must be uploaded");
                    return;
                }
                $scope.saveUserProfile();
            }
            ////////////  SAVE PROFILE UPDATED  /////////////////
            $scope.saveUserProfile = function () {
                console.log($scope.model);
                var btn = Ladda.create(document.querySelector('.btn-submit'));
                btn.start();
                $http.post('@Url.Action("Update", "Profile")',
                    {
                        newUser: $scope.model
                    }).then(function (response) {
                        btn.stop();
                        if (response.data) {
                            if (response.data=="DBLEMAIL"){
                                showError("Email "+$scope.model.Email+" has been used by other users. Please use another email.");
                                return;
                            }
                            $scope.infoSuccess+="<br/>Success update User info";
                            $scope.infoSuccess=$sce.trustAsHtml($scope.infoSuccess);
                            $scope.wizarno = 'success';
                        }
                    }, function (response) {
                        btn.stop();
                        //error handle\
                        var x = 0;
                    });
            }
            $scope.isValidForm = function (theForm) {
                var isvalid = theForm.$valid;
                return isvalid;
            };
            ////////////  PAGE SCROLLING  /////////////////
            $scope.scrollingPage = function (id) {
                $('html, body').animate({
                    scrollTop: $(id).offset().top
                }, 200);
            }
        });
        $(function () {
        });
        $(document).ready(function () {
            $('#checkbox1').bootstrapSwitch();
        })
    </script>
</body>
