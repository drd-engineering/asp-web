    <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap', 'ngSanitize', 'ngFileUpload', 'ngOnlyNumberApp', 'signature'])
        myApp.directive('compileTemplate', function ($compile, $parse) {
            return {
                link: function (scope, element, attr) {
                    var parsed = $parse(attr.ngBindHtml);
                    function getStringValue() { return (parsed(scope) || '').toString(); }

                    //Recompile if the template changes
                    scope.$watch(getStringValue, function () {
                        $compile(element, null, -9999)(scope);  //The -9999 makes it skip directives so that we do not recompile ourselves
                    });
                }
            }
        })
        myApp.directive('onFinishRender', function ($timeout) {
            return {
                restrict: 'A',
                link: function (scope, element, attr) {
                    if (scope.$last === true) {
                        $timeout(function () {
                            scope.$emit('ngRepeatBindRoutesFinished');
                        });
                    }
                }
            }
        });
        myApp.controller("drdController", function ($scope, $sce, Upload, $location, $http, $filter) {

            $scope.model = {};
            $scope.wizarno = 'product';
            $scope.model.Id = 0;
            $scope.model.EncryptedId = "";
            $scope.model.LoginId = null;
            $scope.noImage="no_picture.png";
            $scope.model.ImageProfile=$scope.noImage;
            $scope.model.ImageSignature=$scope.noImage;
            $scope.model.ImageInitials=$scope.noImage;
            $scope.model.ImageStamp=$scope.noImage;
            $scope.model.ImageKtp1=$scope.noImage;
            $scope.model.ImageKtp2 = $scope.noImage;
            $scope.model.OfficialIdNo = null;
            $scope.master={};
            $scope.model.IsActive=true;
            $scope.isUploadImage0=false;
            $scope.infoSuccess="Data saved successfully.";
            $scope.creatorLevels=[{Id:0},{Id:1},{Id:2},{Id:3},{Id:4},{Id:5}];
            $scope.model.CreatorLevel="0";
            var signatureNo=0; // ?


            $scope.$on('ngRepeatBindRoutesFinished', function (ngRepeatFinishedEvent) {
                $(".control-primary").uniform({
                    radioClass: 'choice',
                    wrapperClass: 'border-primary-600 text-primary-800'
                });
            });


            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            angular.element(document).ready(function () {
                if ($scope.model.LoginId == null)
                    $scope.getUserSession();

                getUserProfile();
                $('#content').show();

            });
            $scope.finishLoading = function() {

            }

            $scope.signatureDone = function(data) {
                $("#modal_signature_pad").modal("hide");
                if (signatureNo==0)
                    $("#signaturepad").attr("src", data.dataUrl);
                else
                    $("#initialpad").attr("src", data.dataUrl);


                // Get the form
                var form = document.getElementById("userProfileForm");

                var ImageURL = data.dataUrl;
                // Split the base64 string in data and contentType
                var block = ImageURL.split(";");
                // Get the content type
                var contentType = block[0].split(":")[1];// In this case "image/gif"
                // get the real base64 content of the file
                var realData = block[1].split(",")[1];// In this case "iVBORw0KGg...."

                // Convert to blob
                var blob = b64toBlob(realData, contentType);

                // Create a FormData and append the file
                var fd = new FormData(form);
                fd.append("MyImages", blob);

                // Submit Form and upload file
                $.ajax({
                    url:"/profile/upload?idx=0",
                    data: fd, // the formData function is available in almost all new browsers.
                    type:"POST",
                    contentType:false,
                    processData:false,
                    cache:false,
                    dataType:"json", // Change this according to your response from the server.
                    error:function(err){
                        showInfo("Error upload data signature/initial.");
                    },
                    success:function(data){
                        if (signatureNo==0){
                            $scope.model.ImageSignature = "temp/" + data.Filename;
                        }else if (signatureNo==1){
                            $scope.model.ImageInitials = "temp/" + data.Filename;
                        }
                    },
                    complete: function (data) {
                        //alert('complete');
                    }
                });


            }
            function b64toBlob(b64Data, contentType, sliceSize) {
                contentType = contentType || '';
                sliceSize = sliceSize || 512;

                var byteCharacters = atob(b64Data);
                var byteArrays = [];

                for (var offset = 0; offset < byteCharacters.length; offset += sliceSize) {
                    var slice = byteCharacters.slice(offset, offset + sliceSize);

                    var byteNumbers = new Array(slice.length);
                    for (var i = 0; i < slice.length; i++) {
                        byteNumbers[i] = slice.charCodeAt(i);
                    }

                    var byteArray = new Uint8Array(byteNumbers);

                    byteArrays.push(byteArray);
                }

                var blob = new Blob(byteArrays, {type: contentType});
                return blob;
            }

            function getUserProfile() {
                $http.get('@Url.Action("GetData", "Profile")')
                    .then(function (response) {

                        if (response.data) {
                            var result = response.data;
                            // do mapping values
                            $scope.model.Id = result.Id;
                            $scope.model.EncryptedId = result.EncryptedId;
                            $scope.model.Number=result.Number;
                            $scope.model.Name=result.Name;
                            $scope.model.Phone=result.Phone;
                            $scope.model.Email=result.Email;
                            $scope.model.KtpNo=result.KtpNo;
                            $scope.model.CreatorLevel=result.CreatorLevel+""; // ?
                            $scope.model.OfficialIdNo = result.OfficialIdNo;

                            // handle empty image
                            $scope.isUploadImage0 = (result.ImageProfile == null) ? false : true;
                            $scope.model.ImageProfile = (result.ImageProfile == null) ? $scope.noImage : result.EncryptedId + "/" + result.ImageProfile;
                            $scope.model.ImageSignature = (result.ImageSignature == null) ? $scope.noImage : result.EncryptedId + "/" + result.ImageSignature;
                            $scope.model.ImageInitials = (result.ImageInitials == null) ? $scope.noImage : result.EncryptedId + "/" + result.ImageInitials;
                            $scope.model.ImageStamp = (result.ImageStamp == null) ? $scope.noImage : result.EncryptedId + "/" + result.ImageStamp;
                            $scope.model.ImageKtp1 = (result.ImageKtp1 == null) ? $scope.noImage : result.EncryptedId + "/" + result.ImageKtp1;
                            $scope.model.ImageKtp2 = (result.ImageKtp2 == null) ? $scope.noImage : result.EncryptedId + "/" + result.ImageKtp2;
                        }

                        $('#checkbox1').bootstrapSwitch.defaults.size='mini';

                    }
                )
            }


            $scope.initData = function () {
            }

            $scope.typeChange = function (ini, idx) {
                alert(idx);
            }

            $scope.signaturePad = function (idx) {
                signatureNo=idx;
                $("#modal_signature_pad").modal("show");
            }
            /*--------------------------------------------------------------
            UPLOAD IMAGE FILE
            --------------------------------------------------------------*/
            $scope.uploadFiles = function (idx, file, errFiles) {
                $scope.f = file;
                $scope.errFile = errFiles && errFiles[0];
                if (file) {
                    file.upload = Upload.upload({
                        url: '/profile/upload?idx='+idx,
                        data: { MyImages: file }
                    });

                    file.upload.then(function (response) {
                        file.result = response.data;
                        if (idx==0){
                            $scope.model.ImageProfile = "temp/" + file.result.Filename;
                            $scope.isUploadImage0 = true;
                        } else if (idx==1){
                            $scope.model.ImageSignature = "temp/" + file.result.Filename;
                        } else if (idx==2){
                            $scope.model.ImageInitials = "temp/" + file.result.Filename;
                        } else if (idx==3){
                            $scope.model.ImageStamp = "temp/" + file.result.Filename;
                        } else if (idx==4){
                            $scope.model.ImageKtp1 = "temp/" + file.result.Filename;
                        } else if (idx==5){
                            $scope.model.ImageKtp2 = "temp/" + file.result.Filename;
                        }

                    }, function (response) {
                        if (response.status > 0)
                            $scope.errorMsg = response.status + ': ' + response.data;
                    }, function (evt) {
                        file.progress = Math.min(100, parseInt(100.0 * evt.loaded / evt.total));
                    });
                } else if ($scope.errFile != null) {
                    showInfo("Error upload file : " + $scope.errFile.$error + " (" + $scope.errFile.$errorParam + ")");
                }
            }


            /*--------------------------------------------------------------
            SAVE (submit) USER DATA
            --------------------------------------------------------------*/
            $scope.saveUserProfile = function () {
                var memberType=0;
                var btn = Ladda.create(document.querySelector('.btn-submit'));
                btn.start();
                $http.post('@Url.Action("Update", "Profile")',
                    {
                        user: {
                            Id: $scope.model.Id,
                            EncryptedId: $scope.model.EncryptedId,
                            Name: $scope.model.Name,
                            Phone: $scope.model.Phone,
                            Email: $scope.model.Email,
                            ImageProfile: $scope.model.ImageProfile,
                            ImageSignature: ($scope.noImage == $scope.model.ImageSignature ? null : $scope.model.ImageSignature),
                            ImageInitials: ($scope.noImage == $scope.model.ImageInitials ? null : $scope.model.ImageInitials),
                            ImageStamp: ($scope.noImage == $scope.model.ImageStamp ? null : $scope.model.ImageStamp),
                            ImageKtp1: ($scope.noImage == $scope.model.ImageKtp1 ? null : $scope.model.ImageKtp1),
                            ImageKtp2: ($scope.noImage == $scope.model.ImageKtp2 ? null : $scope.model.ImageKtp2),
                            LoginId: $scope.model.Id,
                            MemberType: memberType,
                            OfficialIdNo: $scope.model.OfficialIdNo,
                            UserId: 'SYST'
                        }
                    }).then(function (response) {
                        btn.stop();
                        if (response.data) {
                            if (response.data=="DBLEMAIL"){
                                showError("Email "+$scope.model.Email+" has been used by other users. Please use another email.");
                                return;
                            }
                            $scope.infoSuccess+="<br/>Success update User info";
                            $scope.infoSuccess=$sce.trustAsHtml($scope.infoSuccess);
                            $scope.wizarno = 'success';
                        }
                    }, function (response) {
                        btn.stop();
                        //error handle\
                        var x = 0;


                    });
            }

            /*--------------------------------------------------------------
            GET SESSION
            --------------------------------------------------------------*/
            $scope.getUserSession = function () {
                $http.get('@Url.Action("GetUserLogin", "Profile")', {}).then(function (response) {
                    if (response.data) {
                        $scope.model.LoginId = response.data.Id;
                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            /*--------------------------------------------------------------
            UPDATE USER PROFILE
            --------------------------------------------------------------*/
            $scope.updateUserProfile = function () {
                if (!$scope.isValidForm($scope.userProfileForm))
                    return;

                if ($scope.isUploadImage0 == false) {
                    showInfo("Pas photo must be uploaded");
                    return;
                }

                $scope.saveUserProfile();
            }

            $scope.isValidForm = function (theForm) {
                var isvalid = theForm.$valid;
                return isvalid;
            };

            /*--------------------------------------------------------------
            GENERAL
            --------------------------------------------------------------*/
            $scope.scrollingPage = function (id) {
                $('html, body').animate({
                    scrollTop: $(id).offset().top
                }, 200);
            }

            $scope.isUserProfile = function () {
                return $scope.model.LoginId == $scope.model.Id;
                //return true;
            }
