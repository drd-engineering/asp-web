@section Styles{
    <!--Transfer Jquery | manage Admin-->
    <link rel="stylesheet" href="/assets/icon_font/css/icon_font.css">
    <!--Transfer Jquery | manage Admin-->

    <link href="/assets/css/pages/company.css" rel="stylesheet" type="text/css">
