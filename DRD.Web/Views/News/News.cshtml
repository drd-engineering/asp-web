<body @*ng-app="ppriApp"*@>
    <!-- Page container -->
    <div class="page-container" ng-controller="drdController">
        <!-- Page content -->
        <div class="page-content">


            <!-- Main content -->
            <div class="content-wrapper" style="display:none">
                <!-- Page header -->
                <div class="page-header page-header-default">
                    <div class="page-header-content">
                        <div class="page-title">
                            <h4>@*<i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Home</span> -*@ Data Content Page</h4>
                            <span style="font-size:small">Entry data Content Page @*| <a href="/home/productlist">Kembali ke list</a>*@</span>
                        </div>

                    </div>

                </div>
                <!-- /page header -->
                <!-- Horizontal form options -->
                <!-- Content area -->
                <div class="content">


                    <!-- Basic layout-->


                    <div class="panel panel-flat">
                        <div class="panel-body">

                            <!--MEMBER DATA-->

                            <form name="myForm" class="form-horizontal" autocomplete="off">

                                <div ng-show="wizarno=='product'">
                                    <fieldset>
                                        <div class="col-md-12">
                                            @*<h4>Promo yang Ditawarkan</h4>*@

                                            <div class="row">
                                                <div class="col-md-10">
                                                    <label class="control-label">Title</label>
                                                    <input type="text" class="form-control" ng-model="model.Title" ng-required="wizarno=='product'" maxlength="100" />
                                                </div>
                                            </div>
                                            <br />
                                            <div class="row">
                                                <div class="col-md-10">
                                                    <label class="control-label">Description</label>
                                                    <textarea class="control-label" ng-model="model.Descr" rows="3" style="resize: none; opacity: 0.8; height: 150px;width:100%" ng-required="wizarno=='product'"></textarea>
                                                </div>
                                            </div>
                                            <br />
                                            <div class="row">
                                                
                                                <div class="col-md-3">
                                                    <label class="control-label">Data Type</label>
                                                    <div ng-repeat="x in master.NewsTypes" class="checkbox" on-finish-render="ngRepeatFinished">
                                                        <label>
                                                            <input type="checkbox" class="control-primary" ng-checked="{{x.IsChecked}}" id="checkboxmt{{$index}}">
                                                            {{x.Descr}}
                                                        </label>
                                                    </div>

                                                </div>
                                                <div class="col-md-3">
                                                    <label class="control-label">Data Publish</label>
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox" class="control-warning" ng-checked="{{model.IsAppZonePublish}}" id="checkboxpublish">
                                                            Publish
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>

                                            <hr />
                                            <h4>Foto Galery</h4>
                                            <div class="row">
                                                <div class="col-md-10">
                                                    <div class="image-wraper" ng-repeat="x in images">

                                                        <img src="/Images/news/{{x.name}}" class="image-content"
                                                             ngf-drop="uploadFiles($index, $file, $invalidFiles)"
                                                             ngf-select="uploadFiles($index, $file, $invalidFiles)"
                                                             ngf-pattern="'image/*'"
                                                             accept="image/*"
                                                             ngf-max-height="1000" ngf-max-size="1MB" />
                                                        <i class="icon-cross" style="position:absolute;margin:5px;background-color:beige;text-align:right" ng-hide="x.status==0 || $index==0" ng-click="removeImage($index)"></i>

                                                    </div>
                                                </div>
                                            </div>

                                            
                                            <hr />
                                            <h4>Status Active</h4>
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <input id="checkbox1" type="checkbox" data-off-text="Inactive" data-on-text="Active" class="BSswitch" ng-model="model.IsActive">
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>

                                    <hr />
                                    <div class="col-md-12">

                                        <div class="col-md-12">
                                            <div class="text-right">
                                                <span class="input-group-btn">
                                                    <button class="btn bg-slate-700 pull-right btn-ladda btn-submit" data-style="slide-down" data-spinner-color="#333" ng-click="updateProduct()" style="width:120px">
                                                        <span class="ladda-label">&nbsp;&nbsp;Submit&nbsp;&nbsp;</span><span class="ladda-spinner"></span>
                                                        <div class="ladda-progress" style="width: 0px;"></div>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </form>
                            <!--/MEMBER DATA-->
                            <!--CONFIRMATION THANK YOU-->
                            <div ng-show="wizarno=='success'">
                                <div class="col-md-12">
                                    <div class="alert alert-success alert-styled-left">
                                        <p ng-bind-html="infoSuccess" compile-template></p>
                                    </div>
                                </div>
                            </div>
                            <!--/CONFIRMATION THANK YOU-->
                        </div>
