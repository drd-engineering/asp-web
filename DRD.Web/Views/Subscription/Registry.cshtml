<body class="login-container" ng-app="drdApp" style="margin-top:-50px;">
    <!-- Page container -->
    <div class="page-container" ng-controller="drdController">
        <!-- Page content -->
        <div class="page-content">
            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Page header -->
                <!-- /page header -->
                <!-- Horizontal form options -->
                <!-- Content area -->
                <div class="content" style="display:none;">

                    <!-- Basic layout-->
                    <div class="panel panel-body login-form" style="width:800px;">
                        <div ng-click="backToHome()" style="border:solid;border-color:cornflowerblue;border-width:1px;padding:10px;min-height:200px;width:100%;text-align:right">
                            <img src="../../Images/back_reg2.jpg" style="max-height:100%;max-width:100%" />
                        </div>
                        <div class="panel-body">
                            <!--MEMBER DATA-->
                            <form name="myForm" class="form-horizontal" autocomplete="off">
                                <div ng-show="wizarno=='product'">
                                    <fieldset>
                                        <div class="col-md-12">

                                            <div class="row form-component">
                                                <div class="col-md-12">
                                                    <label class="control-label">Name</label>
                                                    <input type="text" class="form-control" ng-model="model.MemberName" ng-required="wizarno=='product'" maxlength="50" />
                                                </div>
                                            </div>

                                            <div class="row form-component">
                                                <div class="col-md-4">
                                                    <label class="control-label">Phone</label>
                                                    <input type="text" class="form-control" ng-model="model.MemberPhone" ng-required="wizarno=='product'" maxlength="20" ng-only-number />
                                                </div>
                                                <div class="col-md-8">
                                                    <label class="control-label">Email</label>
                                                    <input type="email" class="form-control" ng-model="model.MemberEmail" ng-required="wizarno=='product'" maxlength="50" ng-readonly="model.Id!=0" />
                                                </div>

                                            </div>

                                            <div class="row form-component">
                                                <div class="col-md-6">
                                                    <label class="control-label">
                                                        Company (optional)
                                                        <small class="display-block text-light">select from registered company, to make new company please contact us</small>
                                                    </label>
                                                    <input type="text" class="form-control input-field-darker" placeholder="not selected" ng-model="" maxlength="50" />
                                                </div>
                                            </div>

                                        </div>
                                    </fieldset>


                                    <div class="col-md-12">
                                        <div class="text-right">
                                            <span class="input-group-btn">
                                                <button class="btn bg-slate-700 pull-right btn-submit mg-left-10" data-style="slide-down" data-spinner-color="#333" ng-click="validateForm()" style="width:120px">
                                                    <span class="ladda-label">&nbsp;&nbsp;Submit&nbsp;&nbsp;</span><span class="ladda-spinner"></span>
                                                    <div class="ladda-progress" style="width: 0px;"></div>
                                                </button>

                                                <button class="btn bg-slate-700 pull-right btn-cancel mg-left-10" data-style="slide-down" data-spinner-color="#333" ng-click="backToHome()" style="width:120px">
                                                    <span class="ladda-label">&nbsp;&nbsp;Back&nbsp;&nbsp;</span><span class="ladda-spinner"></span>
                                                    <div class="ladda-progress" style="width: 0px;"></div>
                                                </button>

                                            </span>

                                        </div>


                                    </div>
                                </div>
                            </form>
                            <!--/MEMBER DATA-->
                            <!--CONFIRMATION THANK YOU-->
                            <div ng-show="wizarno=='success'">
                                <div class="col-md-12">
                                    <p>
                                        You have successfully registered your account. Please check your email to get your password to be able to <a ng-href="/login">log in</a>.<br />
                                        Subscription registration is successful.
                                    </p><br /><br />

                                    <p>if you want to register a new company to become our business partner. We’ll be glad if you contact us <a ng-href="#">here</a>.</p>
                                </div>
                            </div>
                            <!--/CONFIRMATION THANK YOU-->
                            
                            <!-- View member modal -->
                            <ng-include src="'/Include/PopupTnC'"></ng-include>
                            <!-- View member modal -->

                        </div>
