<body class="login-container" ng-app="drdApp" style="margin-top:-50px;">
    <!-- Page container -->
    <div class="page-container" ng-controller="drdController">
        <!-- Page content -->
        <div class="page-content">
            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Content area -->
                <div class="content">


                    <!-- Basic layout-->
                    <div class="panel panel-body login-form" style="width:800px;">
                        <div ng-click="backToHome()" style="min-height:200px;width:100%">
                            <img src="../../Images/back_reg2.jpg" style="max-height:100%;max-width:100%" />
                        </div>
                        
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <p class="medium-text">
                                You have successfully registered your account. Please check your email to get your password to be able to <a ng-href="/login">log in</a>.<br />
                                Subscription registration is successful.
                            </p>

                            <p class="small-text">if you want to register a new company to become our business partner. We’ll be glad if you contact us <a ng-href="#">here</a>.</p>
                        </div>
                    </div>


                    <!-- /basic layout -->




                </div>
                <!-- /vertical form options -->
            </div>
            <!-- /Main content -->
        </div>
        <!-- /Page content -->
    </div>
    <!-- /Page container -->

    <script type="text/javascript">

        var myApp = angular.module('drdApp', ['ui.bootstrap'])

        myApp.controller("drdController", function ($scope, $location, $http, $filter) {

            $scope.backToHome = function () {
                location.href = "/login";
            }

        });

    </script>

</body>