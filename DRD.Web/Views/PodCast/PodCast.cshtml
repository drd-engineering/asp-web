    <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap', 'ngSanitize', 'ngFileUpload', 'ngOnlyNumberApp'])
        myApp.directive('compileTemplate', function ($compile, $parse) {
            return {
                link: function (scope, element, attr) {
                    var parsed = $parse(attr.ngBindHtml);
                    function getStringValue() { return (parsed(scope) || '').toString(); }

                    //Recompile if the template changes
                    scope.$watch(getStringValue, function () {
                        $compile(element, null, -9999)(scope);  //The -9999 makes it skip directives so that we do not recompile ourselves
                    });
                }
            }
        })
        myApp.directive('onFinishRender', function ($timeout) {
            return {
                restrict: 'A',
                link: function (scope, element, attr) {
                    if (scope.$last === true) {
                        $timeout(function () {
                            scope.$emit('ngRepeatBindRoutesFinished');
                        });
                    }
                }
            }
        });
        myApp.controller("drdController", function ($scope, $sce, Upload, $location, $http, $filter) {

            $scope.MAX_IMAGE = 3;

            $scope.model = {};
            $scope.wizarno = 'product';
            $scope.model.Id = 0;
            $scope.model.Image="no_picture.png";
            $scope.podcastImage="podcast.png";
            $scope.model.IsActive=true;
            $scope.isUploadImage=0;
            $scope.infoSuccess="Data berhasil disimpan.";
            $scope.isFileAudio=false;
            initValues();

            //$scope.$on('ngRepeatBindRoutesFinished', function (ngRepeatFinishedEvent) {
            //    $(".control-primary").uniform({
            //        radioClass: 'choice',
            //        wrapperClass: 'border-primary-600 text-primary-800'
            //    });
            //});

            $(".control-warning").uniform({
                radioClass: 'choice',
                wrapperClass: 'border-warning-600 text-warning-800'
            });
            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            angular.element(document).ready(function () {
                //if ($scope.model.Id==0 )
                //    $scope.getMaster();
                $(".content-wrapper").show();
            });

            function initValues() {

                var product = @Html.Raw(Json.Encode(Model.obj));
                if (product.Id!=0 ){
                    $scope.model.Id=product.Id;
                    $scope.model.Title=product.Title;
                    $scope.model.Descr=product.Descr;
                    $scope.model.Duration=product.Duration;
                    $scope.model.Image=product.Image;
                    $scope.model.AudioFileName=product.AudioFileName;
                    $scope.model.FileNameOri=product.FileNameOri;
                    $scope.model.AppZone=product.AppZone;
                    $scope.model.IsAppZonePublish=product.IsAppZonePublish;
                    $scope.model.IsActive=product.IsActive;
                    $scope.model.UserId=product.UserId;

                    $('#checkboxpublish')[0].checked= $scope.model.IsAppZonePublish;

                    if ($scope.model.Image==null)
                        $scope.model.Image="no_picture.png";

                    $scope.isFileAudio=true;
                    $scope.isUploadImage=1;
                    $scope.podcastImage="podcast_uploaded.png";

                }

                $('#checkbox1').bootstrapSwitch.defaults.size='mini';

            }

            $scope.initData = function () {
            }

            //$scope.changeFileAudio = function (ini) {
            //    if (ini.files[0].type.indexOf("audio")==-1){
            //        showInfo("Required audio file");
            //        return;
            //    }

            //    var obUrl = URL.createObjectURL(ini.files[0]);
            //    document.getElementById('audio').setAttribute('src', obUrl);

            //}

            $scope.changeAudio = function (ini) {
                $scope.model.Duration=Math.round(ini.duration);
                document.getElementById('duration').value=$scope.model.Duration;
            }
            /*--------------------------------------------------------------
            UPLOAD FILE
            --------------------------------------------------------------*/
            $scope.uploadImageFile = function (idx, file, errFiles) {
                $scope.f = file;
                $scope.errFile = errFiles && errFiles[0];
                if (file) {
                    file.upload = Upload.upload({
                        url: '/updownfile/uploadimage?idx='+idx+'&fileType=8',
                        data: { MyImages: file }
                    });

                    file.upload.then(function (response) {
                        //$timeout(function () {
                        file.result = response.data;

                        if (idx==0){
                            $scope.model.Image=file.result.filename;
                            $scope.isUploadImage=1;
                        }
                        //});
                    }, function (response) {
                        if (response.status > 0){
                            //$scope.errorMsg = response.status + ': ' + response.data;
                            showInfo("Error upload file : Maximum request length exceeded.");
                        }
                    }, function (evt) {
                        file.progress = Math.min(100, parseInt(100.0 * evt.loaded / evt.total));

                    });
                } else if ($scope.errFile != null) {
                    showInfo("Error upload file : " + $scope.errFile.$error + " (" + $scope.errFile.$errorParam + ")");
                }
            }

            $scope.uploadAudioFile = function (idx, file, errFiles) {
                $scope.f = file;
                $scope.errFile = errFiles && errFiles[0];
                $scope.model.FileNameOri=file.name;
                if (file) {
                    if (file.type.indexOf("audio")==-1){
                        showInfo("Required audio file");
                        return;
                    }
                    $scope.audioFileName=file.name

                    var obUrl = URL.createObjectURL(file);
                    document.getElementById('audio').setAttribute('src', obUrl);

                    file.upload = Upload.upload({
                        url: '/updownfile/uploadimage?idx='+idx+'&fileType=8',
                        data: { MyImages: file }
                    });

                    file.upload.then(function (response) {
                        //$timeout(function () {
                        file.result = response.data;
                        $scope.model.AudioFileName=file.result.filename;
                        //});
                    }, function (response) {
                        if (response.status > 0){
                            showInfo("Error upload file : Maximum request length exceeded.");
                        }
                    }, function (evt) {
                        file.progress = Math.min(100, parseInt(100.0 * evt.loaded / evt.total));
                        
                        if (file.progress>=100){
                            $scope.progressValueUploadAudio="Upload success";
                            $scope.podcastImage="podcast_uploaded.png";
                        }else
                            $scope.progressValueUploadAudio="Uploading...("+file.progress+"%)";

                    });
                } else if ($scope.errFile != null) {
                    showInfo("Error upload file : " + $scope.errFile.$error + " (" + $scope.errFile.$errorParam + ")");
                }
            }



            /*--------------------------------------------------------------
            SAVE PRODUCT
            --------------------------------------------------------------*/
            $scope.saveProduct = function () {
                var btn = Ladda.create(document.querySelector('.btn-submit'));
                btn.start();
                $http.post('@Url.Action("Save", "podcast")',
                    {
                        prod: {
                            Id: $scope.model.Id,
                            Title: $scope.model.Title,
                            Descr: $scope.model.Descr,
                            Duration: $scope.model.Duration,
                            Image: $scope.model.Image,
                            AudioFileName: $scope.model.AudioFileName,
                            FileNameOri: $scope.model.FileNameOri,
                            IsAppZonePublish: $('#checkboxpublish')[0].checked,
                            IsActive: $('#checkbox1')[0].checked,
                            UserId: 'SYST',
                        }
                    }).then(function (response) {
                        btn.stop();
                        if (response.data) {
                            $scope.wizarno = 'success';
                        }
                    }, function (response) {
                        btn.stop();
                        //error handle\
                        var x = 0;
                    });
            }

            /*--------------------------------------------------------------
            GET MASTER
            --------------------------------------------------------------*/
            @*$scope.getMaster = function () {
                $http.post('@Url.Action("GetMaster", "news")', {}).then(function (response) {
                    if (response.data) {
                        $scope.master = response.data;
                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            $scope.removeImage = function (idx) {

                $scope.images.splice(idx, 1);

                for (i = $scope.images.length - 1; i < $scope.MAX_IMAGE - 1; i++) {
                    var item = { name: 'no_picture.png', status: 0 };
                    $scope.images.push(item);
                }

            }*@
            /*--------------------------------------------------------------
            UPDATE PRODUCT
            --------------------------------------------------------------*/
            $scope.updateProduct = function () {
                if ($scope.isUploadImage==0) {
                    showInfo("Pas photo must be uploaded");
                    return;
                }
                if ($scope.model.Duration==undefined) {
                    showInfo("Audio file must be uploaded");
                    return;
                }

                if (!$scope.isValidForm($scope.myForm))
                    return;

                

                $scope.saveProduct();
            }

            $scope.isValidForm = function (theForm) {
                var isvalid = theForm.$valid;
                return isvalid;
            };

            /*--------------------------------------------------------------
            GENERALD
            --------------------------------------------------------------*/
            $scope.scrollingPage = function (id) {
                $('html, body').animate({
                    scrollTop: $(id).offset().top
                }, 200);
            }
            /*--------------------------------------------------------------
            CONVERT JSON DATE
            --------------------------------------------------------------*/
            function convertJsonDate(val) {
                if (val == undefined)
                    return '';
                return new Date(parseInt(val.substr(6)));
            }

        });


        $(function () {
        });


        $(document).ready(function () {
            $('#checkbox1').bootstrapSwitch();
        })

    </script>

