<style>
    .center-text {
        text-align: center;
    }

    .box-rounded {
        border-radius: 15px;
        padding: 10px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        cursor: pointer;
    }

    .panel {
        border: none;
    }

    .panel-heading {
        /*make'em transparent, cause of panel in panel thing*/
        background-color: #f5f5f5 !important;
    }


    .highlight-container {
        /*same as hightlight-container in invitation-list*/
         background-color: #f5f5f5;
         padding: 0;
         width: inherit;
    }

    .highlight-container .container {
            width: inherit;
    }

    .highlight-card {
        background-color: white;
        margin: inherit 10px;
        padding: 10px;
    }

    .highlight-header {
        border-bottom: solid 1px #e9ebf0;
    }

    .text-align-right {
        text-align: right !important;
    }


    .highlight-card .card-title {
        /*similiar with medium-text class, font-size's different. Same as card-title in invitationList*/
        font-weight: 400;
        line-height: 1.25;       
        font-size: 14x;
        
    }

    .highlight-card .card-content {
        /*similiar with small-text class, font-size's different. Same as card-title in invitationList*/
        padding: 5px;
        font-weight: 300;
        color: grey;
        line-height: 1;
        font-size: 12px;
    }

    .highlight-card .card-filter {
        /*similiar with small-text class, font-size's different. Same as card-title in invitationList*/

        font-weight: 300;
        color: black;
        line-height: 1;
        font-size: 12px;
    }

    .highlight-card h1 {
        font-size: 96px;
        color: black;
    }

    ..highlight-card .card-image-lg {
        height: 100%;
    }

    .highlight-card .card-image-lg img {
        height: 80px;
        width: 80px;
        border-radius: 50%; /* almost all image treated like this*/
    }

    .card-content p {
        text-align: center;
        line-height: 1;
        margin-top: 5px;
    }

    /*container of vertical-align content wannabe*/
    .vertical-align-row {
        display: flex;
    }

    .vertical-align-content {
        margin-top: auto;
        margin-bottom: auto;
    }


</style>

<body ng-controller="drdController">

    <div class="page-container" ng-controller="drdController">

        <section id="dashboard-rotation">
            <div class="panel highlight-container">
                <div class="highlight-card">
                    <div class="highlight-header">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-10">
                                    <p class="card-title"><strong>ROTATION</strong></p>
                                </div>
                                <div class="col-md-2">
                                    <p class="card-filter">Select 2</p>
                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="card-content">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row vertical-align-row" ng-click="linkPage('INPROGRESS')">
                                        <div class="col-sm-3 vertical-align-content">
                                            <div class="card-image-lg">
                                                <img src="~/assets/ongoing.png" />
                                                <p>Ongoing</p>
                                            </div>
                                        </div>
                                        <div class="col-sm-9">
                                            <div class="card-content-lg">
                                                <h1>{{counter.InProgress}}</h1>
                                            </div>

                                        </div>

                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="row vertical-align-row" ng-click="linkPage('COMPLETED')">
                                        <div class="col-sm-3 vertical-align-content">
                                            <div class="card-image-lg">
                                                <img src="~/assets/completed.png" />
                                                <p>Completed</p>
                                            </div>
                                        </div>
                                        <div class="col-sm-9">
                                            <div class="card-content-lg">
                                                <h1>{{counter.Completed}}</h1>
                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>

        <section id="dashboard-usage">
            <div class="panel highlight-container">
                <div class="highlight-card">
                    <div class="highlight-header">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-10">
                                    <p class="card-title"><strong>USAGE</strong></p>
                                </div>
                                <div class="col-md-2">
                                    <p class="card-filter">Select 2</p>
                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="card-content">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row vertical-align-row">
                                        <div class="col-sm-3 vertical-align-content">
                                            <div class="card-image-lg">
                                                <img src="~/assets/ongoing.png" />
                                                <p>Ongoing</p>
                                            </div>
                                        </div>
                                        <div class="col-sm-9">
                                            <div class="card-content-lg">
                                                <h1>10</h1>
                                            </div>

                                        </div>

                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="row vertical-align-row">
                                        <div class="col-sm-3 vertical-align-content">
                                            <div class="card-image-lg">
                                                <img src="~/assets/completed.png" />
                                                <p>Completed</p>
                                            </div>
                                        </div>
                                        <div class="col-sm-9">
                                            <div class="card-content-lg">
                                                <h1>10</h1>
                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>

    </div>
     

        <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap']) //, 'ui.select2'])

        myApp.controller("drdController", function ($scope, $location, $http, $filter) {
            $scope.product = {};
            $scope.products = [];
            $scope.productCount = [];
            $scope.paging = [];
            $scope.kriteria = "";
            $scope.page = 1;
            $scope.row = 20;
            $scope.currPage = 0;
            $scope.isView = false;
            $scope.index = 0;
            initValues();

            $scope.dashboard = {};

            $scope.$on("$destroy", function (event) {
                clearInterval(xtimer);
            });

            $scope.counter = { Inbox: 0, InProgress: 0, Pending: 0, Declined:0, Completed:0, Pending:0, Altered:0, Contact:0, DrDriveDesc:'0GB',Document:0 };
            $scope.notiftime = 5000;
            $scope.xtimer = 0;

            $scope.startCounting = function () {
                $scope.xtimer = setInterval(() => {
                    $scope.getActivityCounter();
                }, 5000);

            };

            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            function initValues() {

                $scope.dbmenus = @Html.Raw(Json.Encode(Model.dbmenus));
            }

            angular.element(document).ready(function () {
                $scope.startCounting();
                $scope.getActivityCounter();
                $("#content").show();
               
            });

            $scope.getActivityCounter = function () {
                $http.post('@Url.Action("GetActivityCounter", "Dashboard")', {}).then(function (response) {
                    if (response.data) {
                        $scope.counter = response.data.New;
                    }
                    else {

                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            $scope.resetCounter = function () {
                $scope.counter.Rotation = 0;
                $scope.counter.Inbox = 0;
                $scope.counter.Altered = 0;
                $scope.counter.Revised = 0;
                $scope.counter.InProgress = 0;
                $scope.counter.Pending = 0;
                $scope.counter.Signed = 0;
                $scope.counter.Declined = 0;
                $scope.counter.Completed = 0;
                $scope.counter.Document = 0;
                $scope.counter.Contact = 0;
            }

            $scope.linkPage = function (name) {
                var url=$filter('filter')($scope.dbmenus,{SecondaryKey:name})[0].UrlPage;
                location.href=url;
            }

            /*--------------------------------------------------------------
            DO EDIT ROTATION
            --------------------------------------------------------------*/

           
           
            $scope.getProductCount = function (kriteria) {
                $http.post('@Url.Action("GetListCount", "Rotation")', { topCriteria: kriteria }).then(function (response) {
                    if (response.data) {

                        var jumlahData = response.data;
                        var jumlahPage = Math.ceil(jumlahData / $scope.row);
                        for (var i = 1; i <= jumlahPage; i++) {
                            $scope.paging.push({ value: i, text: i });
                        }

                        $scope.page = "1";

                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            /*--------------------------------------------------------------
            GENERAL FUNCTION
            --------------------------------------------------------------*/


            /*--------------------------------------------------------------
            CONVERT JSON DATE
            --------------------------------------------------------------*/
            $scope.convertJsonDate = function (val) {
                if (val == undefined)
                    return '';
                return new Date(parseInt(val.substr(6)));
            }




            $scope.sendEmail = function () {
                $http.post('@Url.Action("sendemail", "dashboard")', {  }).then(function (response) {
                    if (response.data) {

                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

        });

        $(function () {

        });

        $(document).ready(function () {


        });

        </script>

</body>