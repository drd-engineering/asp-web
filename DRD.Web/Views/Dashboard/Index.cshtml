@model DRD.Domain.JsonLayout


<script src="/assets/js/plugins/buttons/spin.min.js" type="text/javascript"></script>
<script src="/assets/js/plugins/buttons/ladda.min.js" type="text/javascript"></script>
<script src="/assets/js/pages/components_buttons.js" type="text/javascript"></script>

<script src="/assets/vendors/angular-1.5.5/angular.js"></script>
<script src="/assets/vendors/angular-1.5.5/angular-animate.js"></script>
<script src="/Scripts/ui-bootstrap-tpls-1.3.2.js"></script>



<!-- Theme JS files -->
<script type="text/javascript" src="assets/js/plugins/forms/styling/uniform.min.js"></script>
<script type="text/javascript" src="assets/js/plugins/visualization/d3/d3.min.js"></script>
<script type="text/javascript" src="assets/js/plugins/visualization/d3/d3_tooltip.js"></script>

<!-- /theme JS files -->
<style>
    .center-text {
        text-align: center;
    }

    .box-rounded {
        border-radius: 15px;
        padding: 10px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        cursor: pointer;
    }
</style>

<body>

    <!-- Page container -->
    <div class="page-container" ng-controller="drdController">
        <!-- Page content -->
        <div class="page-content">


            <!-- Main content -->
            <div class="content-wrapper">
                
                <!-- Content area -->

                <div class="content" id="content" style="display:none;">
                    <!-- LIST -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-lg-2">
                                <div class="panel box-rounded" style="background-color:#1f4e79;color:white">
                                    <div class="panel-body center-text" ng-click="linkPage('INBOX')">
                                        <h3 class="no-margin">{{counter.Inbox}}</h3>
                                        Inbox
                                    </div>
                                    <div class="container-fluid">
                                        <div id="members-online"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div class="panel bg-slate-600 box-rounded" style="background-color:#1f4e79;color:white">
                                    <div class="panel-body center-text" ng-click="linkPage('INPROGRESS')">
                                        <h3 class="no-margin">{{counter.InProgress}}</h3>
                                        In Progress
                                    </div>
                                    <div class="container-fluid">
                                        <div id="members-online"></div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-lg-2">
                                <div class="panel bg-success-600 box-rounded" style="background-color:#1f4e79;color:white">
                                    <div class="panel-body center-text" ng-click="linkPage('COMPLETED')">
                                        <h3 class="no-margin">{{counter.Completed}}</h3>
                                        Completed
                                    </div>
                                    <div class="container-fluid">
                                        <div id="members-online"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-2">
                                <div class="panel bg-success-600 box-rounded" style="background-color:#69ab3d;color:white">
                                    <div class="panel-body center-text" ng-click="linkPage('CONTACT')">
                                        <h3 class="no-margin">{{counter.Contact}}</h3>
                                        Contact
                                    </div>
                                    <div class="container-fluid">
                                        <div id="members-online"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-2">
                                <div class="panel bg-success-600 box-rounded" style="background-color:#f07522;color:white">
                                    <div class="panel-body center-text" ng-click="linkPage('DOCUMENT')">
                                        <h3 class="no-margin">{{counter.Document}}</h3>
                                        Document
                                    </div>
                                    <div class="container-fluid">
                                        <div id="members-online"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-2">
                                <div class="panel bg-success-600 box-rounded" style="background-color:#fbc300;color:white">
                                    <div class="panel-body center-text" ng-click="linkPage('DRDRIVE')">
                                        <h3 class="no-margin">{{counter.DrDriveDesc}}</h3>
                                        DRDrive
                                    </div>
                                    <div class="container-fluid">
                                        <div id="members-online"></div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>



                    <!-- /Simpanan -->
                    <!-- /LIST -->
                    <!--ROTATION -->
                    <div class="row">


                        <!-- Page header -->
                        <div class="page-header page-header-default">
                            <div class="page-header-content">
                                <div class="page-title">
                                    <h4>Rotation</h4>
                                    <br />

                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="icon-search4"></i></span>
                                                <input type="text" class="form-control" ng-model="kriteria" placeholder="Entering data search criteria" ng-keyup="$event.keyCode == 13 && getLiteProducts(kriteria, page, row)">
                                                <span class="input-group-btn">
                                                    <button id="my-button" class="btn btn-default btn-ladda btn-process" type="button" data-style="slide-down" data-spinner-color="#333" ng-click="getLiteProducts(kriteria, page, row)" style="width:120px">
                                                        <span class="ladda-label">Process</span><span class="ladda-spinner"></span>
                                                        <div class="ladda-progress" style="width: 0px;"></div>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <!-- /page header -->
                        <!-- Content area -->

                        <div class="content">
                            <!-- Contextual classes -->
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="">

                                        <button class="btn border-slate text-slate-800 btn-flat" ng-click="addProduct('@Model.key')">
                                            &nbsp;&nbsp;Add New&nbsp;&nbsp;
                                        </button>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="pull-right">

                                        <select ng-model="page" class="form-control" ng-change="changePage(kriteria, page, row)">
                                            <option value="{{x.value}}" ng-repeat="x in paging">{{x.text}}</option>
                                        </select>
                                    </div>
                                </div>

                            </div>
                            <div style="height:10px"></div>
                            <!-- LIST -->
                            <div calss="row">


                                <div class="panel panel-flat">

                                    <div class="table-responsive" ng-show="isView">

                                        <table class="table-xs table-bordered table-striped" style="font-size:small;width:100%">
                                            <thead>
                                                <tr>
                                                    <th width="25px">#</th>
                                                    <th>Subject</th>
                                                    <th>Workflow Name</th>
                                                    <th width="175px">Created</th>
                                                    <th width="100px">Status</th>
                                                    <th width="100px">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="x in products">
                                                    <td>{{$index+1 + index}}</td>
                                                    <td><a ng-click="do_edit('@Model.key', x.Key);">{{x.Subject}}</a></td>
                                                    <td>{{x.WorkflowName}}</td>
                                                    <td width="175px">{{convertJsonDate(x.DateCreated) | date: 'dd/MM/yyyy HH:mm:ss'}}</td>
                                                    <td>
                                                        <a ng-click="runLog(x.Status, x.Key);" ng-hide="x.Status=='00'">
                                                            {{x.StatusDescr}} <span style="font-size:xx-small;color:darkblue">{{convertJsonDate(x.DateStatus) | date: 'dd/MM/yyyy HH:mm:ss'}}</span>
                                                        </a>
                                                        <span ng-hide="x.Status!='00'">
                                                            {{x.StatusDescr}} <span style="font-size:xx-small;color:darkblue">{{convertJsonDate(x.DateStatus) | date: 'dd/MM/yyyy HH:mm:ss'}}</span>
                                                        </span>
                                                    </td>
                                                    <td width="100px">
                                                        <a ng-click="do_start(x.Id);" ng-show="x.Status=='00'">Start</a>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- /LIST -->

                        </div>
                        <!-- /content area -->
                    </div>

                    <!--END ROTATION -->
                </div>
                <!-- /content area -->
            </div>
            <!-- /main content -->
        </div>
        <!-- /page content -->
    </div>
    <!-- /page container -->

    <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap']) //, 'ui.select2'])

        myApp.controller("drdController", function ($scope, $location, $http, $filter) {
            $scope.product = {};
            $scope.products = [];
            $scope.productCount = [];
            $scope.paging = [];
            $scope.kriteria = "";
            $scope.page = 1;
            $scope.row = 20;
            $scope.currPage = 0;
            $scope.isView = false;
            $scope.index = 0;
            initValues();

            $scope.dashboard = {};

            $scope.$on("$destroy", function (event) {
                clearInterval(xtimer);
            });

            $scope.counter = { Inbox: 0, InProgress: 0, Pending: 0, Declined:0, Completed:0, Pending:0, Altered:0, Contact:0, DrDriveDesc:'0GB',Document:0 };
            $scope.notiftime = 5000;
            $scope.xtimer = 0;

            $scope.startCounting = function () {
                $scope.xtimer = setInterval(() => {
                    $scope.getActivityCounter();
                }, 5000);

            };

            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            function initValues() {

                $scope.dbmenus = @Html.Raw(Json.Encode(Model.dbmenus));
            }

            angular.element(document).ready(function () {
                $scope.startCounting();
                $scope.getActivityCounter();
                $("#content").show();
                $scope.getLiteProducts($scope.kriteria, $scope.page, $scope.row);
            });

            $scope.getActivityCounter = function () {
                $http.post('@Url.Action("GetActivityCounter", "Dashboard")', {}).then(function (response) {
                    if (response.data) {
                        $scope.counter = response.data.New;
                    }
                    else {

                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            $scope.resetCounter = function () {
                $scope.counter.Rotation = 0;
                $scope.counter.Inbox = 0;
                $scope.counter.Altered = 0;
                $scope.counter.Revised = 0;
                $scope.counter.InProgress = 0;
                $scope.counter.Pending = 0;
                $scope.counter.Signed = 0;
                $scope.counter.Declined = 0;
                $scope.counter.Completed = 0;
                $scope.counter.Document = 0;
                $scope.counter.Contact = 0;
            }

            $scope.linkPage = function (name) {
                var url=$filter('filter')($scope.dbmenus,{SecondaryKey:name})[0].UrlPage;
                location.href=url;
            }

            /*--------------------------------------------------------------
            DO EDIT ROTATION
            --------------------------------------------------------------*/

            $scope.do_edit = function (mid, id) {
                var url=$filter('filter')($scope.dbmenus,{SecondaryKey:'ROTATION'})[0].UrlPage;
                mid=url.substr(url.indexOf('=')+1);
                location.href = "/Rotation/Rotation?mid=" + mid + "," + id;
            }
            $scope.addProduct = function (mid) {
                var url=$filter('filter')($scope.dbmenus,{SecondaryKey:'ROTATION'})[0].UrlPage;
                mid=url.substr(url.indexOf('=')+1);
                location.href = "/Rotation/Rotation?mid=" + mid;
            }

            $scope.runLog = function (status, id) {
                var code='';
                if (status=='01')
                    code='INPROGRESS';
                else if (status=='98')
                    code='DECLINED';
                else if (status=='90')
                    code='COMPLETED';

                var url=$filter('filter')($scope.dbmenus,{SecondaryKey:code})[0].UrlPage.replace('list?','?')+','+id;
                location.href = url;
            }
            $scope.checkFlag = function (val, bitval) {
                return ((val & bitval) == bitval);
            }

            $scope.do_start = function (id) {
                swal({
                    title: "Confirmation",
                    text: "Data will be processed, continue with data processing?",
                    type: "warning",
                    showCancelButton: true,
                    closeOnConfirm: false,
                    confirmButtonColor: "#2196F3",
                    showLoaderOnConfirm: true
                },
                function () {
                    setTimeout(function () {
                        //swal({
                        //    title: "Ajax request finished!",
                        //    confirmButtonColor: "#2196F3"
                        //});
                        $scope.startProduct(id);
                    }, 500);

                });

            }

            $scope.startProduct = function (id) {
                $http.post("/Rotation/start?id=" + id,
                    {
                    }).then(function (response) {
                        if (response.data) {
                            if (response.data == -1)
                                showError("Invalid rotation.");
                            else if (response.data == -2)
                                showError("Invalid member plan.");
                            else if (response.data == -3)
                                showInfo("Your package plan has expired, please check on my plan.");
                            else if (response.data == -4)
                                showInfo("Rotation quota is not enough, please check on my plan.");

                            else {
                                showSuccess("Successful data process.");
                                $scope.getLiteProducts($scope.kriteria, $scope.page, $scope.row);
                            }
                        }else
                            showInfo("process data error.");
                    }, function (response) {
                        //error handle\
                        var x = 0;
                        showInfo("process data error.");
                    });
            }
            /*--------------------------------------------------------------
            GET ASSET ITEM
            --------------------------------------------------------------*/
            $scope.getLiteProducts = function (kriteria, page, row) {
                var btn = Ladda.create(document.querySelector('.btn-process'));
                btn.start();
                $scope.products = [];
                $http.post('@Url.Action("GetList", "Rotation")', { topCriteria: kriteria, page: page, pageSize: row }).then(function (response) {
                    btn.stop();
                    if (response.data) {
                        $scope.products = response.data;

                        $scope.index = row * (page - 1);

                        $scope.paging = [];
                        $scope.getProductCount(kriteria);

                        $scope.isView = true;
                    }
                }, function (response) {
                    btn.stop();
                    //error handle\
                    var x = 0;
                });
            }

            $scope.changePage = function (kriteria, page, row) {
                $scope.products = [];
                $http.post('@Url.Action("GetList", "Rotation")', { topCriteria: kriteria, page: page, pageSize: row }).then(function (response) {
                    if (response.data) {
                        $scope.products = response.data;
                        $scope.index = row * (page - 1);
                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            $scope.getProductCount = function (kriteria) {
                $http.post('@Url.Action("GetListCount", "Rotation")', { topCriteria: kriteria }).then(function (response) {
                    if (response.data) {

                        var jumlahData = response.data;
                        var jumlahPage = Math.ceil(jumlahData / $scope.row);
                        for (var i = 1; i <= jumlahPage; i++) {
                            $scope.paging.push({ value: i, text: i });
                        }

                        $scope.page = "1";

                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            /*--------------------------------------------------------------
            GENERAL FUNCTION
            --------------------------------------------------------------*/


            /*--------------------------------------------------------------
            CONVERT JSON DATE
            --------------------------------------------------------------*/
            $scope.convertJsonDate = function (val) {
                if (val == undefined)
                    return '';
                return new Date(parseInt(val.substr(6)));
            }




            $scope.sendEmail = function () {
                $http.post('@Url.Action("sendemail", "dashboard")', {  }).then(function (response) {
                    if (response.data) {
                        
                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

        });

        $(function () {

        });

        $(document).ready(function () {


        });

    </script>

</body>