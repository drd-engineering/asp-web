
@{
    Layout = null;
}

<div id="modal_password" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h6 class="modal-title">Password</h6>
            </div>

            <div class="modal-body">
                <div class="">
                    @*<label class="control-label">Current Password</label>*@
                    <input type="password" class="form-control" id="thePassword" ng-model="thePassword" maxlength="50" value="" />

                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="setPassword();">Submit</button>
            </div>

        </div>
    </div>
</div>

