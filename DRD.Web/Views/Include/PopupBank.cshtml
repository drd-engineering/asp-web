
@{
    Layout = null;
}

<div id="modal_select_bank" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h6 class="modal-title">Select Bank</h6>
            </div>

            <div class="input-group">
                <span class="input-group-addon"><i class="icon-search4"></i></span>
                <input type="text" ng-keyup="$event.keyCode == 13 && getLiteBanks(kriteria, page, row)" class="form-control" ng-model="kriteria" placeholder="Enter project name" />

                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" ng-click="getLiteBanks(kriteria, page, row)">Search</button>
                </span>

                <span class="input-group-btn" style="width:75px">
                    <select ng-model="page" class="form-control" ng-change="changePageBanks(kriteria, page, row)">
                        <option value="{{x.value}}" ng-repeat="x in paging">{{x.text}}</option>
                    </select>
                </span>
            </div>

            <div style="height:450px" class="table-responsive">
                <table class="table-xxs table-bordered table-hover datatable-highlight dataTable no-footer" style="font-size:small;width:100%">
                    <thead>
                        <tr>
                            <th width="25px">#</th>
                            <th width="100px">Code</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="x in banks" style="vertical-align:top">
                            <td width="25px">{{$index+1 + index}}</td>
                            <td width="100px"><a data-dismiss="modal" ng-click="setBank($index);">{{x.Code}}</a></td>
                            <td>{{x.Name}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

