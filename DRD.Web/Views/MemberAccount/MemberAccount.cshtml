<body @*ng-app="drdApp"*@>
    <!-- Page container -->
    <div class="page-container" ng-controller="drdController">
        <!-- Page content -->
        <div class="page-content">


            <!-- Main content -->
            <div class="content-wrapper">
                <!-- Page header -->
                <div class="page-header page-header-default">
                    <div class="page-header-content">
                        <div class="page-title">
                            <h4>@*<i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Home</span> -*@Entry My Bank Account</h4>

                        </div>

                    </div>

                </div>
                <!-- /page header -->
                <!-- Horizontal form options -->
                <!-- Content area -->
                <div class="content" style="display:none">


                    <!-- Basic layout-->


                    <div class="panel panel-flat">
                        <div class="panel-body">


                            <!--MEMBER DATA-->

                            <form name="myForm" class="form-horizontal" autocomplete="off">

                                <div ng-show="wizarno=='product'">
                                    <fieldset>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-md-5">
                                                    <label class="control-label">Title</label>
                                                    <input type="text" class="form-control" ng-model="model.Title" ng-required="wizarno=='product'" maxlength="20" />
                                                </div>
                                                <div class="col-md-5">
                                                    <label class="control-label">Bank</label>
                                                    <div class="input-group">
                                                        <div>
                                                            <input type="text" class="form-control" ng-model="bankName" maxlength="50" readonly />
                                                        </div>
                                                        <span class="input-group-addon" style="cursor:pointer" ng-click="popupBank()"><i class="icon-cogs"></i></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">

                                                <div class="col-md-5">
                                                    <label class="control-label">Account No</label>
                                                    <input type="text" class="form-control" ng-model="model.AccountNo" ng-required="wizarno=='product'" maxlength="50" />
                                                </div>
                                                <div class="col-md-5">
                                                    <label class="control-label">Account Name</label>
                                                    <input type="text" class="form-control" ng-model="model.AccountName" ng-required="wizarno=='product'" maxlength="50" />
                                                </div>
                                            </div>
                                            <div class="row">

                                                
                                                <div class="col-md-10">
                                                    <label class="control-label">Branch</label>
                                                    <input type="text" class="form-control" ng-model="model.Branch" ng-required="wizarno=='product'" maxlength="50" />
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <hr />
                                    
                                    <div class="col-md-12">

                                        <div class="col-md-12">
                                            <div class="text-right">

                                                <span class="input-group-btn">
                                                    <button class="btn bg-slate-700 pull-right btn-ladda btn-submit" data-style="slide-down" data-spinner-color="#333" ng-click="updateProduct()" style="width:120px">
                                                        <span class="ladda-label">&nbsp;&nbsp;Submit&nbsp;&nbsp;</span><span class="ladda-spinner"></span>
                                                        <div class="ladda-progress" style="width: 0px;"></div>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </form>
                            <!--/MEMBER DATA-->
                            <!--CONFIRMATION THANK YOU-->
                            <div ng-show="wizarno=='success'">
                                <div class="col-md-12">

                                    <div class="alert alert-success alert-styled-left">
                                        Data successfully saved. @*Click <a href='/home/productlist'>disini</a> untuk kembali ke list data.*@
                                    </div>
                                </div>



                            </div>
                            <!--/CONFIRMATION THANK YOU-->
                            <!-- View member modal -->
                            <ng-include src="'/Include/PopupBank'"></ng-include>
                            <!-- View member modal -->

                        </div>
                    </div>


                    <!-- /basic layout -->




                </div>
                <!-- /vertical form options -->
            </div>
            <!-- /Main content -->
        </div>
        <!-- /Page content -->
    </div>
    <!-- /Page container -->

    <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap', 'ngFileUpload', 'ngOnlyNumberApp'])

        myApp.controller("drdController", function ($scope, Upload, $location, $http, $filter) {

            // modal project
            $scope.bank = {};
            $scope.banks = [];
            $scope.bankCount = [];
            $scope.paging = [];
            $scope.kriteria = "";
            $scope.page = 1;
            $scope.row = 20;
            $scope.currPage = 0;
            $scope.index = 0;
            // modal project

            $scope.model = {};
            $scope.wizarno = 'product';
            $scope.master = {};
            $scope.model.IsActive=true;
            $scope.model.Id = 0;
            initValues();

            $(".control-warning").uniform({
                radioClass: 'choice',
                wrapperClass: 'border-warning-600 text-warning-800'
            });

            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            angular.element(document).ready(function () {
                $(".content").show();
            });

            function initValues() {
                var product = @Html.Raw(Json.Encode(Model.obj));
                if (product.Id!=0 ){

                    $scope.model=product;
                    $scope.bankName=product.Bank.Name;

                }

                $('#checkbox1').bootstrapSwitch.defaults.size='mini';
            }

            $scope.initData = function () {

            }


            /*--------------------------------------------------------------
            SAVE PRODUCT
            --------------------------------------------------------------*/
            $scope.saveProduct = function () {
                var btn = Ladda.create(document.querySelector('.btn-submit'));
                btn.start();
                $http.post('@Url.Action("Save", "memberaccount")',
                    {
                        prod: {
                            Id: $scope.model.Id,
                            Title: $scope.model.Title,
                            AccountNo: $scope.model.AccountNo,
                            AccountName:$scope.model.AccountName,
                            BankId:$scope.model.BankId,
                            Branch:$scope.model.Branch,
                        }
                    }).then(function (response) {
                        btn.stop();
                        if (response.data) {
                            window.scrollTo(0, 0);
                            $scope.wizarno = 'success';

                        }
                    }, function (response) {
                        //error handle\
                        btn.stop();
                        var x = 0;
                    });
            }

            $scope.updateProduct = function () {
                if (!$scope.isValidForm($scope.myForm))
                    return;

                if ($scope.bankName==undefined) {
                    showInfo("Required bank");
                    return;
                }

                $scope.saveProduct();
            }

            $scope.isValidForm = function (theForm) {
                var isvalid = theForm.$valid;
                return isvalid;
            };

            $scope.scrollingPage = function (id) {
                $('html, body').animate({
                    scrollTop: $(id).offset().top
                }, 200);
            }

            /*--------------------------------------------------------------
                POPUP COMPANY
            --------------------------------------------------------------*/
            $scope.popupBank = function () {
                //if ($scope.model.Id!=0){
                //    showInfo("Bank data can not be changed.");
                //    return;
                //}
                $("#modal_select_bank").modal("show");
                $scope.banks=[];

            }
            $scope.setBank = function (idx) {
                $scope.bank = $scope.banks[idx];
                $scope.bankName = $scope.bank.Name;
                $scope.model.BankId=$scope.bank.Id;
                
            }

            $scope.getLiteBanks = function (kriteria, page, row) {
                $scope.banks = [];
                $http.post('@Url.Action("GetLiteAll", "bank")', { topCriteria: kriteria, page: page, pageSize: row}).then(function (response) {
                    if (response.data) {
                        $scope.banks = response.data;

                        $scope.index = row * (page - 1);

                        $scope.paging = [];
                        $scope.getBankCount(kriteria);

                        $scope.isView = true;
                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            $scope.changePageBanks = function (kriteria, page, row) {
                $scope.banks = [];
                $http.post('@Url.Action("GetLiteAll", "bank")', { topCriteria: kriteria, page: page, pageSize: row }).then(function (response) {
                    if (response.data) {
                        $scope.banks = response.data;
                        $scope.index = row * (page - 1);
                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            $scope.getBankCount = function (kriteria) {
                $http.post('@Url.Action("GetLiteAllCount", "bank")', { topCriteria: kriteria}).then(function (response) {
                    if (response.data) {

                        var jumlahData = response.data;
                        var jumlahPage = Math.ceil(jumlahData / $scope.row);
                        for (var i = 1; i <= jumlahPage; i++) {
                            $scope.paging.push({ value: i, text: i });
                        }

                        $scope.page = "1";

                    }
                }, function (response) {
                    //error handle\
                    var x = 0;
                });
            }

            /*--------------------------------------------------------------
                END POPUP COMPANY
            --------------------------------------------------------------*/

        });



        $(document).ready(function () {
            $('#checkbox1').bootstrapSwitch();
        })

        

</script>
</body>