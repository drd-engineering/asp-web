<body>
    <!-- Page container -->
    <div class="page-container" ng-controller="drdController">
        <!-- Page content -->
        <div class="page-content">
            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Page header -->
                <div class="page-header page-header-default">
                    <div class="page-header-content">
                        <div class="page-title">
                            <h4>Company Profile</h4>
                        </div>
                    </div>

                </div>
                <!-- /page header -->
                <!-- Horizontal form options -->
                <!-- Content area -->
                <div class="content" style="display:none">
                    <!-- Basic layout-->
                    <div class="panel panel-flat">
                        <div class="panel-body">


                            <!--MEMBER DATA-->

                            <form name="myForm" class="form-horizontal" autocomplete="off">
                                <div ng-show="wizarno=='product'">
                                    <fieldset>
                                        <div class="col-md-12">
                                            <h4>Company Data</h4>

                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label class="control-label">Code</label>
                                                    <input type="text" class="form-control" ng-model="model.Code" maxlength="10" readonly />
                                                </div>
                                                <div class="col-md-7">
                                                    <label class="control-label">Name</label>
                                                    <input type="text" class="form-control" ng-model="model.Name" ng-required="wizarno=='product'" maxlength="50" />
                                                </div>

                                            </div>
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label class="control-label"></label>
                                                </div>

                                            </div>
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label class="control-label">Contact Name</label>
                                                    <input type="text" class="form-control" ng-model="model.Contact" ng-required="wizarno=='product'" maxlength="50" />
                                                </div>
                                                <div class="col-md-3">
                                                    <label class="control-label">Phone</label>
                                                    <input type="text" class="form-control" ng-model="model.Phone" ng-required="wizarno=='product'" maxlength="20" ng-only-number />
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="control-label">Email</label>
                                                    <input type="email" class="form-control" ng-model="model.Email" ng-required="wizarno=='product'" maxlength="50" />
                                                </div>
                                            </div>

                                            <hr />


                                            <h4>Property</h4>
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label class="control-label">Logo</label>
                                                    <div>
                                                        <div class="image-wraper">

                                                            <img ng-src="~/Images/Company/{{model.Image1}}" class="image-content"
                                                                 ngf-drop="uploadFiles(0,$file, $invalidFiles)"
                                                                 ngf-select="uploadFiles(0,$file, $invalidFiles)"
                                                                 ngf-pattern="'image/*'"
                                                                 accept="image/*"
                                                                 ngf-max-height="5000" ngf-max-size="1MB" style="object-fit:fill" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <label class="control-label">Small Logo</label>
                                                    <div>
                                                        <div class="image-wraper">

                                                            <img ng-src="/Images/Company/{{model.Image2}}" class="image-content"
                                                                 ngf-drop="uploadFiles(1,$file, $invalidFiles)"
                                                                 ngf-select="uploadFiles(1,$file, $invalidFiles)"
                                                                 ngf-pattern="'image/*'"
                                                                 accept="image/*"
                                                                 ngf-max-height="1000" ngf-max-size="1MB" style="object-fit:fill" />
                                                        </div>
                                                    </div>
                                                </div>



                                                <div class="colo-md-5">
                                                    <div class="row">
                                                        <div class="col-md-3">
                                                            <div class="col-md-12">
                                                                <div class="row">
                                                                    <label class="control-label">Bar Background Color</label>
                                                                    <input type="text" class="jscolor form-control" ng-model="model.BackColorBar" ng-required="wizarno=='product'" maxlength="10" readonly value="{{model.BackColorBar}}" />
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <div class="row">
                                                                    <label class="control-label">Page Background Color</label>
                                                                    <input type="text" class="jscolor form-control" ng-model="model.BackColorPage" ng-required="wizarno=='product'" maxlength="10" readonly value="{{model.BackColorPage}}" />
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>


                                            </div>

                                            <hr />

                                            <h4>Location</h4>
                                            <div class="row">
                                                <div class="col-md-10">
                                                    <label class="control-label">Address</label><br />
                                                    <textarea class="control-label" ng-model="model.Address" rows="3" style="resize: none; overflow-y: hidden; opacity: 0.8; height: 75px;width:100%" ng-required="wizarno=='product'"></textarea>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-10">
                                                    <label class="control-label">Point Location</label>
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" ng-model="model.PointLocation" readonly />
                                                        <span class="input-group-addon" style="cursor:pointer" ng-click="showLocation(model.Location)" data-toggle="modal" data-target="#modal_select_map"><i class="icon-location3"></i></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <hr />

                                            <div class="row">

                                                <div class="col-md-10">
                                                    <label class="control-label">Description</label><br />
                                                    <textarea class="control-label" ng-model="model.Descr" rows="3" style="resize: none; opacity: 0.8; height: 200px;width:100%"></textarea>
                                                </div>

                                            </div>
                                        </div>
                                    </fieldset>

                                    <hr />
                                    <div class="col-md-12">

                                        <div class="col-md-12">
                                            <div class="text-right">

                                                <span class="input-group-btn">
                                                    <button class="btn bg-slate-700 pull-right btn-ladda btn-submit" data-style="slide-down" data-spinner-color="#333" ng-click="updateProduct()" style="width:120px">
                                                        <span class="ladda-label">&nbsp;&nbsp;Submit&nbsp;&nbsp;</span><span class="ladda-spinner"></span>
                                                        <div class="ladda-progress" style="width: 0px;"></div>
                                                    </button>
                                                </span>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </form>
                            <!--/MEMBER DATA-->
                            <!--CONFIRMATION THANK YOU-->
                            <div ng-show="wizarno=='success'">
                                <div class="col-md-12">
                                    <div class="alert alert-success alert-styled-left">
                                        Data saved successfully.
                                    </div>
                                </div>
                            </div>
                            <!--/CONFIRMATION THANK YOU-->
                            <!-- View map modal -->
                            <div id="modal_select_map" class="modal_hide">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header bg-primary">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h6 class="modal-title">Select Location</h6>
                                        </div>

                                        <input type="text" class="form-control" g-places-autocomplete ng-model="model.Autocomplete" placeholder="Enter location" />
                                        <div id="map_canvas" class="modal-body" style="height:400px">
                                            <ui-gmap-google-map center='map.center'
                                                                zoom='map.zoom'
                                                                draggable="true"
                                                                options="options"
                                                                control="map.control" class="map_canvas">
                                            </ui-gmap-google-map>
                                        </div>

                                        <label style="text-align:center;width:100%;margin-top:10px">{{model.LocationDetail}}</label>
                                        <div style="width:100%;height:1px;background-color:dimgrey"></div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-link" data-dismiss="modal" ng-click="setLocation()">Set</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- View map modal -->

                        </div>
                    </div>


                    <!-- /basic layout -->




                </div>
                <!-- /vertical form options -->
            </div>
            <!-- /Main content -->
        </div>
        <!-- /Page content -->
    </div>
    <!-- /Page container -->

    <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap', 'ngOnlyNumberApp', 'ngFileUpload', 'uiGmapgoogle-maps', 'google.places'])

        myApp.config(['uiGmapGoogleMapApiProvider', function (GoogleMapApiProviders) {
            GoogleMapApiProviders.configure({
                china: true
            });
        }]);

        myApp.controller("drdController", function ($scope,  Upload, $location, $http, $filter, uiGmapGoogleMapApi, uiGmapIsReady) {
            // modal member
            $scope.model = {};
            $scope.wizarno = 'product';
            $scope.model.Id = 0;
            $scope.model.Image1="no_picture.png";
            $scope.model.Image2="no_picture.png";
            $scope.model.ImageCard="no_picture.png";
            $scope.isUploadImage1=0;
            $scope.isUploadImage2=0;
            $scope.isUploadImageCard=0;
            initValues();

            //
            // MAP
            //
            $scope.xmarkers = [];

            $scope.model.Autocomplete = null;


            // for the map
            $scope.map = {
                control: {},
                center: {
                    latitude: -6.2893464,
                    longitude: 106.9513492
                },
                draggable: true,
                zoom: 16
            };

            // map options
            $scope.options = {
                scrollwheel: false,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };


            $scope.markerTemplate = {
                id: 0,
                coords: {
                    latitude: 0,
                    longitude: 0
                },
                icon: { url: "/assets/images/ic_markerred64.png" },
                control: {},
                options: { draggable: true }
            };

            $scope.currentLocation = { latitude: -6.2893464, longitude: 106.9513492 };
            $scope.dummyCurrentLocation = { latitude: 0, longitude: 0 };

            uiGmapIsReady.promise().then(function (map_instances) {
                $scope.initMap();
            });

            uiGmapGoogleMapApi.then(function (maps) {

            });


            $scope.$on('g-places-autocomplete:select', function (event, place) {

                $scope.currentLocation.latitude = place.geometry.location.lat();
                $scope.currentLocation.longitude = place.geometry.location.lng();

                $scope.map.center.latitude = $scope.currentLocation.latitude;
                $scope.map.center.longitude = $scope.currentLocation.longitude;

                $scope.getLocationAddress($scope.currentLocation.latitude, $scope.currentLocation.longitude);

                $scope.createMarker();
            });
            //
            //END MAP
            //


            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            function initValues() {
                
                var product = {
                    id: 2;
                    Image1: "default_logo.png";
                    Image2: "x.jpg";
                    ImageCard: "x.jpg";

                    user: {
                        company: {
                            Image1: "default_logo.png"
                        };
                    };

                    isUploadImage1: 0;
                    isUploadImage2: 0;
                    isUploadImageCard: 0;

                };
                if (product.Id!=0 ){
                    $scope.model=product;

                    $scope.isUploadImage1=1;
                    $scope.isUploadImage2=1;
                    $scope.isUploadImageCard=1;
                }
            }


            angular.element(document).ready(function () {
                if ($scope.model.Id==0 ){
                    $scope.model.Image1="no_picture.png";
                    $scope.model.Image2="no_picture.png";
                    $scope.model.ImageCard="no_picture.png";
                }else{
                    if ($scope.model.Latitude!=0){
                        $scope.currentLocation.latitude=$scope.model.Latitude;
                        $scope.currentLocation.longitude=$scope.model.Longitude;
                    }
                }
                $(".content").show();
            });

            $scope.initData = function () {

            }

            /*--------------------------------------------------------------
            UPLOAD IMAGE FILE
            --------------------------------------------------------------*/
            $scope.uploadFiles = function (idx, file, errFiles) {
                $scope.f = file;
                $scope.errFile = errFiles && errFiles[0];
                if (file) {
                    file.upload = Upload.upload({
                        url: '/updownfile/uploadimage?idx='+idx+'&fileType=9',
                        data: { MyImages: file }
                    });

                    file.upload.then(function (response) {

                        file.result = response.data;

                        if (idx==0){
                            $scope.model.Image1=file.result.filename;
                            $scope.isUploadImage1=1;
                        }else if (idx==1){
                            $scope.model.Image2=file.result.filename;
                            $scope.isUploadImage2=1;
                        }else if (idx==2){
                            $scope.model.ImageCard=file.result.filename;
                            $scope.isUploadImageCard=1;
                        }

                    }, function (response) {
                        if (response.status > 0)
                            $scope.errorMsg = response.status + ': ' + response.data;
                    }, function (evt) {
                        file.progress = Math.min(100, parseInt(100.0 * evt.loaded / evt.total));
                    });
                } else if ($scope.errFile != null) {
                    showInfo("Error upload file : " + $scope.errFile.$error + " (" + $scope.errFile.$errorParam + ")");
                }
            }

            /*--------------------------------------------------------------
            SAVE PRODUCT
            --------------------------------------------------------------*/
            $scope.saveProduct = function () {
                var btn = Ladda.create(document.querySelector('.btn-submit'));
                btn.start();
                $http.post('@Url.Action("Save", "company")',
                    {
                        prod: {
                            Id: $scope.model.Id,
                            Code: $scope.model.Code,
                            Name: $scope.model.Name,
                            Contact: $scope.model.Contact,
                            Phone: $scope.model.Phone,
                            Email: $scope.model.Email,
                            Address: $scope.model.Address,
                            PointLocation: $scope.model.PointLocation,
                            Latitude:$scope.currentLocation.latitude,
                            Longitude:$scope.currentLocation.longitude,
                            Image1: $scope.model.Image1,
                            Image2: $scope.model.Image2,
                            BackColorBar: "#"+$scope.model.BackColorBar.replace(/#/g, ""),
                            BackColorPage: "#"+$scope.model.BackColorPage.replace(/#/g, ""),
                            Descr: $scope.model.Descr,
                            IsActive: true,
                            CompanyType:0,

                        }
                    }).then(function (response) {
                        btn.stop();
                        if (response.data) {
                            if (response.data) {
                                $scope.wizarno = 'success';
                                $scope.model.Id=response.data;
                                location.href = "/";
                            }
                        }
                    }, function (response) {
                        btn.stop();
                        //error handle\
                        var x = 0;
                    });
            }


            $scope.updateProduct = function () {
                if (!$scope.isValidForm($scope.myForm))
                    return;

                if ($scope.model.PointLocation==undefined)
                {
                    showInfo("Point location must be filled.");
                    return;
                }

                if ($scope.isUploadImage1==0) {
                    showInfo("Logo harus di lengkapi");
                    return;
                }
                if ($scope.isUploadImage2==0) {
                    showInfo("Logo harus di lengkapi");
                    return;
                }

                $scope.saveProduct();
            }

            $scope.isValidForm = function (theForm) {
                var isvalid = theForm.$valid;
                return isvalid;
            };

            $scope.scrollingPage = function (id) {
                $('html, body').animate({
                    scrollTop: $(id).offset().top
                }, 200);
            }

            /*---------------------------------------------------------------------------
             M A P
            ---------------------------------------------------------------------------*/

            /*--------------------------------------------------------------
            INIT MAP
            --------------------------------------------------------------*/
            $scope.initMap = function () {

                var lat = $scope.currentLocation.latitude;
                var lng = $scope.currentLocation.longitude;

                $scope.markers = [];
                $scope.markers.push(angular.copy($scope.markerTemplate));
                $scope.markers[0].coords = {
                    latitude: lat,
                    longitude: lng
                }

                $scope.getLocationAddress(lat, lng);
            }

            /*--------------------------------------------------------------
            SHOW LOCATION MAP
            --------------------------------------------------------------*/
            $scope.getLocationAddress = function (lat, lng) {
                var geocoder = new google.maps.Geocoder;
                var infowindow = new google.maps.InfoWindow;
                var latlng = { lat: lat, lng: lng };
                geocoder.geocode({ 'location': latlng }, function (results, status) {
                    if (status === 'OK') {
                        if (results[1]) {
                            $scope.model.LocationDetail = results[0].formatted_address;
                            $scope.dummyCurrentLocation.latitude = results[0].geometry.location.lat();
                            $scope.dummyCurrentLocation.longitude = results[0].geometry.location.lng();
                        } else {
                            window.alert('No results found');
                        }
                    } else {
                        window.alert('Geocoder failed due to: ' + status);
                    }
                });
            }

            $scope.createMarker = function () {
                if ($scope.xmarkers.length != 0)
                    $scope.xmarkers[0].setMap(null);

                $scope.xmarkers = [];
                var xmap = $scope.map.control.getGMap();
                var myLatlng = new google.maps.LatLng($scope.currentLocation.latitude, $scope.currentLocation.longitude);
                var mk = new google.maps.Marker(
                {
                    position: myLatlng,
                    map: xmap,
                    icon: { url: "/assets/images/ic_markerred64.png" },
                    title: "Drag me!",
                    draggable: true
                });

                $scope.xmarkers.push(mk);

                google.maps.event.clearListeners(mk, "dragend")
                google.maps.event.addListener(mk, "dragend", function (event) {
                    var lat = event.latLng.lat();
                    var lng = event.latLng.lng();

                    $scope.getLocationAddress(lat, lng);

                    $scope.map.control.refresh({
                        latitude: lat,
                        longitude: lng
                    });

                });

            }

            $scope.showLocation = function (val) {
                var element = document.getElementById('modal_select_map');
                if (element.className != 'modal fade') {
                    element.className = 'modal fade';
                }
                $scope.createMarker();

                $scope.map.center.latitude = $scope.currentLocation.latitude;
                $scope.map.center.longitude = $scope.currentLocation.longitude;
                $scope.map.zoom = 16;

            }

            /*--------------------------------------------------------------
           SET LOCATION
           --------------------------------------------------------------*/
            $scope.setLocation = function () {
                $scope.model.PointLocation = $scope.model.LocationDetail;
                $scope.currentLocation.latitude = $scope.dummyCurrentLocation.latitude;
                $scope.currentLocation.longitude = $scope.dummyCurrentLocation.longitude;
                angular.element('#modal_select_map').modal('hide');
            }
        });

    </script>

</body>