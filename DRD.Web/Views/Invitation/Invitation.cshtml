    <script type="text/javascript">


        var myApp = angular.module('drdApp', ['ngAnimate', 'ui.bootstrap', 'ngSanitize', 'ngFileUpload', 'ngOnlyNumberApp'])

        myApp.controller("drdController", function ($scope, $sce, Upload, $location, $http, $filter) {

            $scope.model = {};
            $scope.wizarno = 'product';
            $scope.model.Id = 0;
            $scope.model.ExpiryDay = 1;
            $scope.infoSuccess = "Succesfull invited.";
            initValues();


            /*--------------------------------------------------------------
            INIT DATA
            --------------------------------------------------------------*/
            angular.element(document).ready(function () {
                $(".content").show();

                $("#email").keydown(function () {
                    $scope.model.Id = 0;
                });

                
            });


            function initValues() {
            }

            $scope.initData = function () {
            }




            /*--------------------------------------------------------------
            SAVE PRODUCT
            --------------------------------------------------------------*/
            $scope.checkInvitation = function () {
                if (!$scope.isValidForm($scope.myForm))
                    return;
                $http.post('@Url.Action("Check", "Invitation")',
                    {
                        Email: $scope.model.Email,
                    }).then(function (response) {
                        if (response.data) {
                            var data = response.data;
                            if (data.Id > 0) {
                                $scope.model = data;
                                $scope.model.ExpiryDay = 3;
                            } else if (data.Id == 0) {
                                showInfo("Recipient email is not found in our system");
                            } else if (data.Id == -1) {
                                showInfo("Not allowed to invite to yourself");
                            } else if (data.Id == -2) {
                                showInfo("Recipient is already in the invited list");
                            }
                        }
                    }, function (response) {
                        //error handle\
                        var x = 0;
                    });
            }

            $scope.saveProduct = function () {
                var btn = Ladda.create(document.querySelector('.btn-submit'));
                btn.start();
                $http.post('@Url.Action("Save", "Invitation")',
                    {
                        Email: $scope.model.Email,
                        ExpiryDay: $scope.model.ExpiryDay,
                    }).then(function (response) {
                        btn.stop();
                        if (response.data) {
                            $scope.wizarno = 'success';
                        }
                    }, function (response) {
                        //error handle\
                        btn.stop();
                        var x = 0;
                    });
            }



            /*--------------------------------------------------------------
            UPDATE PRODUCT
            --------------------------------------------------------------*/
            $scope.updateProduct = function () {
                if (!$scope.isValidForm($scope.myForm))
                    return;

                //if ($scope.isUploadImage0==0) {
                //    showInfo("Stamp must be uploaded");
                //    return;
                //}

                $scope.saveProduct();
            }

            $scope.isValidForm = function (theForm) {
                var isvalid = theForm.$valid;
                return isvalid;
            };

            /*--------------------------------------------------------------
            GENERALD
            --------------------------------------------------------------*/
            $scope.scrollingPage = function (id) {
                $('html, body').animate({
                    scrollTop: $(id).offset().top
                }, 200);
            }
            /*--------------------------------------------------------------
            CONVERT JSON DATE
            --------------------------------------------------------------*/
            function convertJsonDate(val) {
                if (val == undefined)
                    return '';
                return new Date(parseInt(val.substr(6)));
            }

        });


        $(function () {
        });


        $(document).ready(function () {
            $('#checkbox1').bootstrapSwitch();
        })

    </script>

